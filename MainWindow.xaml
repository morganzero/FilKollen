                    </Border>

                    <!-- Theme Selector -->
                    <ComboBox Grid.Column="2" x:Name="ThemeSelector" Width="140" Height="40" Margin="0,0,20,0"
                              Style="{DynamicResource FK.Style.ThemeToggle}"
                              SelectionChanged="ThemeSelector_SelectionChanged">
