<Window x:Class="FilKollen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FilKollen.Converters"
        Title="FilKollen - Skydd mot bluff och hackare"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Height="700"
        Width="1000"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource FK.Style.MainWindow}"
        Icon="Resources/Icons/filkollen.ico">

    <Window.Resources>
        <converters:WidthToColumnConverter x:Key="WidthToColumnConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Responsiv layout style -->
        <Style x:Key="ResponsiveGrid"
                TargetType="Grid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource WidthToColumnConverter}}"
                        Value="True">
                    <Setter Property="Tag"
                            Value="SingleColumn"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Root chrome med FilKollen blå-tema -->
    <Border Background="{DynamicResource FK.Brush.Bg}"
            CornerRadius="12"
            BorderBrush="{DynamicResource FK.Brush.Border}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Topbar -->
                <RowDefinition Height="*"/>
                <!-- Body -->
                <RowDefinition Height="40"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- === CLEAN TOP BAR === -->
            <Grid Grid.Row="0"
                    Background="Transparent"
                    MouseDown="TopBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo area - endast logotyp -->
                <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0">
                    <Border Width="32"
                            Height="32"
                            Margin="0,0,12,0"
                            VerticalAlignment="Center"
                            Background="{DynamicResource FK.Brush.Primary}"
                            CornerRadius="6">
                        <TextBlock Text="FK"
                                FontWeight="Bold"
                                FontSize="14"
                                Foreground="White"
                                   HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="FILKOLLEN"
                            FontWeight="Bold"
                            FontSize="18"
                               Foreground="{DynamicResource FK.Brush.Primary}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Right side - Tema + Controls -->
                <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                    <!-- Tema selector -->
                    <ComboBox x:Name="ThemeSelector"
                            Width="120"
                            Height="32"
                            Margin="0,0,12,0"
                              Style="{DynamicResource FK.Style.ThemeCombo}"
                              SelectionChanged="ThemeSelector_SelectionChanged">
                        <ComboBoxItem Content="🖥️ System"/>
                        <ComboBoxItem Content="☀️ Ljust"/>
                        <ComboBoxItem Content="🌙 Mörkt"/>
                    </ComboBox>

                    <!-- Window controls -->
                    <Button Content="−"
                            Width="32"
                            Height="32"
                            Margin="2,0"
                            Style="{DynamicResource FK.Style.WindowButton}"
                            Click="Minimize_Click"/>
                    <Button Content="□"
                            Width="32"
                            Height="32"
                            Margin="2,0"
                            Style="{DynamicResource FK.Style.WindowButton}"
                            Click="Maximize_Click"/>
                    <Button Content="✕"
                            Width="32"
                            Height="32"
                            Margin="2,0"
                            Style="{DynamicResource FK.Style.WindowButton}"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <!-- === MAIN CONTENT AREA === -->
            <Grid Grid.Row="1"
                    Margin="20"
                    Style="{StaticResource ResponsiveGrid}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Skydd-rader -->
                    <RowDefinition Height="20"/>
                    <!-- Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Status -->
                    <RowDefinition Height="20"/>
                    <!-- Spacer -->
                    <RowDefinition Height="*"/>
                    <!-- Huvudområde -->
                </Grid.RowDefinitions>

                <!-- === SKYDD-RADER (Realtid + IP) === -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Realtidsskydd (halverad bredd) -->
                    <Border Grid.Column="0"
                            Style="{DynamicResource FK.Style.ProtectionCard}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="REALTIDSSKYDD"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                       Foreground="{DynamicResource FK.Brush.Text}"
                                       HorizontalAlignment="Center"
                                    Margin="0,0,0,16"/>

                            <ToggleButton x:Name="ProtectionToggle"
                                          Style="{DynamicResource FK.Style.ProtectionToggle}"
                                          HorizontalAlignment="Center"
                                          Checked="ProtectionToggle_Checked"
                                          Unchecked="ProtectionToggle_Unchecked"/>
                        </StackPanel>
                    </Border>

                    <!-- IP-Skydd (ny sektion) -->
                    <Border Grid.Column="2"
                            Style="{DynamicResource FK.Style.ProtectionCard}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="IP-SKYDD"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                       Foreground="{DynamicResource FK.Brush.Text}"
                                       HorizontalAlignment="Center"
                                    Margin="0,0,0,16"/>

                            <ToggleButton x:Name="IpProtectionToggle"
                                          Style="{DynamicResource FK.Style.ProtectionToggle}"
                                          HorizontalAlignment="Center"
                                          Checked="IpProtectionToggle_Checked"
                                          Unchecked="IpProtectionToggle_Unchecked"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- === ENKEL STATUSMODUL === -->
                <Border Grid.Row="2"
                        Style="{DynamicResource FK.Style.StatusCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status-ikon och text -->
                        <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                            <Ellipse x:Name="StatusIndicator"
                                    Width="16"
                                    Height="16"
                                     Fill="{DynamicResource FK.Brush.StatusNeutral}"
                                    Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock x:Name="StatusMainText"
                                        Text="SYSTEMET ÄR SÄKERT"
                                           FontSize="16"
                                        FontWeight="Bold"
                                           Foreground="{DynamicResource FK.Brush.Text}"/>
                                <TextBlock x:Name="StatusSubText"
                                        Text="0 hot funna • Real-time skydd aktivt"
                                           FontSize="12"
                                        Opacity="0.7"
                                           Foreground="{DynamicResource FK.Brush.Subtext}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Statistik -->
                        <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                            <Border Background="{DynamicResource FK.Brush.Surface}"
                                    CornerRadius="8"
                                    Padding="12,8"
                                    Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="SENASTE SKANNING"
                                            FontSize="10"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"
                                            HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LastScanText"
                                            Text="Aldrig"
                                            FontSize="12"
                                            FontWeight="Medium"
                                               Foreground="{DynamicResource FK.Brush.Text}"
                                            HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{DynamicResource FK.Brush.Surface}"
                                    CornerRadius="8"
                                    Padding="12,8">
                                <StackPanel>
                                    <TextBlock Text="HOT HANTERADE"
                                            FontSize="10"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"
                                            HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="ThreatsHandledText"
                                            Text="0"
                                            FontSize="12"
                                            FontWeight="Medium"
                                               Foreground="{DynamicResource FK.Brush.Text}"
                                            HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- === HUVUDOMRÅDE MED SNABBÅTGÄRDER === -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Vänster panel - Snabbåtgärder -->
                    <Border Grid.Column="0"
                            Style="{DynamicResource FK.Style.ActionCard}">
                        <StackPanel>
                            <TextBlock Text="⚡ SNABBÅTGÄRDER"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                       Foreground="{DynamicResource FK.Brush.Text}"
                                       HorizontalAlignment="Center"
                                    Margin="0,0,0,20"/>

                            <!-- Endast en skanningsknapp -->
                            <Button x:Name="QuickScanButton"
                                    Content="🔍 Snabbskanna datorn"
                                    Style="{DynamicResource FK.Style.PrimaryButton}"
                                    Margin="0,0,0,12"
                                    Click="QuickScanButton_Click"/>

                            <Button x:Name="BrowserCleanButton"
                                    Content="🌐 Radera bluffnotiser"
                                    Style="{DynamicResource FK.Style.SecondaryButton}"
                                    Margin="0,0,0,12"
                                    Click="BrowserCleanButton_Click"/>

                            <Button x:Name="SystemInfoButton"
                                    Content="ℹ️ Systeminformation"
                                    Style="{DynamicResource FK.Style.SecondaryButton}"
                                    Click="SystemInfoButton_Click"/>

                            <!-- Separator -->
                            <Border Height="1"
                                    Background="{DynamicResource FK.Brush.Border}"
                                    Margin="0,20"
                                    Opacity="0.5"/>

                            <!-- Licens info -->
                            <StackPanel>
                                <TextBlock Text="LICENSSTATUS"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                           Foreground="{DynamicResource FK.Brush.Subtext}"
                                           HorizontalAlignment="Center"
                                        Margin="0,0,0,8"/>
                                <Border Background="{DynamicResource FK.Brush.Primary}"
                                        CornerRadius="6"
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock x:Name="LicenseStatusText"
                                            Text="TRIAL AKTIVT"
                                               Foreground="White"
                                            FontSize="11"
                                            FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Höger panel - Detaljerad info eller loggar -->
                    <Border Grid.Column="2"
                            Style="{DynamicResource FK.Style.ContentCard}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="MainContentPanel">
                                <!-- Standard - Säker status -->
                                <StackPanel x:Name="SafeStatusPanel"
                                        Visibility="Visible">
                                    <Border Width="80"
                                            Height="80"
                                            CornerRadius="40"
                                            Background="{DynamicResource FK.Brush.Success}"
                                            HorizontalAlignment="Center"
                                            Margin="0,40,0,20">
                                        <TextBlock Text="✓"
                                                FontSize="40"
                                                Foreground="White"
                                                   HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="ALLT SER BRA UT!"
                                            FontSize="20"
                                            FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource FK.Brush.Success}"
                                               Margin="0,0,0,8"/>

                                    <TextBlock Text="Ditt system är säkert. Realtidsskyddet övervakar kontinuerligt efter hot."
                                               FontSize="14"
                                            TextAlignment="Center"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"
                                               TextWrapping="Wrap"
                                            MaxWidth="400"
                                            LineHeight="20"/>
                                </StackPanel>

                                <!-- Hot upptäckta - Detaljvy -->
                                <StackPanel x:Name="ThreatsDetailPanel"
                                        Visibility="Collapsed">
                                    <Border Width="80"
                                            Height="80"
                                            CornerRadius="40"
                                            Background="{DynamicResource FK.Brush.Warning}"
                                            HorizontalAlignment="Center"
                                            Margin="0,20,0,20">
                                        <TextBlock Text="⚠️"
                                                FontSize="40"
                                                Foreground="White"
                                                   HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock x:Name="ThreatsHeaderText"
                                            Text="HOT UPPTÄCKTA!"
                                               FontSize="20"
                                            FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource FK.Brush.Warning}"
                                               Margin="0,0,0,8"/>

                                    <TextBlock Text="Följande säkerhetshot har identifierats och kräver din uppmärksamhet:"
                                               FontSize="14"
                                            TextAlignment="Center"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"
                                               TextWrapping="Wrap"
                                            MaxWidth="400"
                                            LineHeight="20"
                                               Margin="0,0,0,20"/>

                                    <!-- Lista över upptäckta hot -->
                                    <StackPanel x:Name="ThreatsList">
                                        <!-- Dynamiska hot-kort läggs till här -->
                                    </StackPanel>

                                    <!-- Globala åtgärdsknappar -->
                                    <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                                Margin="0,20,0,0">
                                        <Button x:Name="HandleAllThreatsButton"
                                                Content="🧹 Åtgärda Alla Hot"
                                                Style="{DynamicResource FK.Style.PrimaryButton}"
                                                Margin="0,0,12,0"
                                                Click="HandleAllThreatsButton_Click"/>

                                        <Button x:Name="RefreshScanButton"
                                                Content="🔄 Skanna Igen"
                                                Style="{DynamicResource FK.Style.SecondaryButton}"
                                                Click="RefreshScanButton_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>

            <!-- === FOOTER === -->
            <Border Grid.Row="2"
                    Background="{DynamicResource FK.Brush.Surface}"
                    BorderBrush="{DynamicResource FK.Brush.Border}"
                    CornerRadius="0,0,12,12"
                    BorderThickness="0,1,0,0">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusBarText"
                            Grid.Column="0"
                               Text="FilKollen säkerhetsscanner - Redo för skanning"
                               Foreground="{DynamicResource FK.Brush.Subtext}"
                               VerticalAlignment="Center"
                            FontSize="12"/>

                    <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                        <Ellipse Width="6"
                                Height="6"
                                Margin="0,0,6,0"
                                 Fill="{DynamicResource FK.Brush.Success}"/>
                        <TextBlock x:Name="ConnectionStatusText"
                                Text="ONLINE"
                                FontSize="11"
                                   Foreground="{DynamicResource FK.Brush.Success}"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>