                            </StackPanel>

                            <ScrollViewer x:Name="ThreatsPanel" Visibility="Collapsed" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="ThreatsListPanel"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
