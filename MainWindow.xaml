                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Quick Actions -->
                        <Border Style="{StaticResource GlassMorphCard}"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="âš¡ SNABBÃ…TGÃ„RDER"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource DynamicText}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"/>

                                <Button x:Name="TempScanButton"
                                        Style="{StaticResource GlassButton}"
                                        Content="ðŸ” SKANNA TEMP-FILER"
                                        Margin="0,0,0,12"
                                        Click="TempScanButton_Click"/>

                                <!-- HUVUDKONTROLL 2: Browser Clean Button -->
                                <Button x:Name="BrowserCleanButton"
                                        Style="{StaticResource GlassButton}"
                                        Content="ðŸŒ RENSA BLUFFNOTISER"
