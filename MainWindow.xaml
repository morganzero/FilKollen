                                   FontSize="10"
                                   Foreground="{DynamicResource DynamicTextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Theme Toggle -->
                    <ToggleButton Grid.Column="2"
                                  x:Name="ThemeToggle"
                                  Style="{StaticResource ModernThemeToggle}"
                                  Margin="0,0,20,0"
                                  ToolTip="VÃ¤xla mellan mÃ¶rkt/ljust tema"
                                  Click="ThemeToggle_Click"/>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="3"
