<Window x:Class="FilKollen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FilKollen - Modern Säkerhetsscanner" 
        Height="800" Width="1200" 
        MinHeight="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Modern glassmorphism styles -->
        <Style x:Key="GlassWindow" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#F8F9FA" Opacity="0.95"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" BlurRadius="30" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#1E1E1E" Opacity="0.95"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#404040"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Moderniserad Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="12" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="BorderBrush" Value="#404040"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Stats Card med gradient -->
        <Style x:Key="StatsCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="20" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernPrimaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#667eea" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Sidebar style -->
        <Style x:Key="ModernSidebar" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#F8F9FA" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#252526" Opacity="0.9"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main glass container -->
    <Border Style="{StaticResource GlassWindow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" 
                    Height="60"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid Margin="20,0">
                    <!-- Logo och produktnamn -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image x:Name="CompanyLogoImage" 
                               Width="120" Height="28" 
                               Stretch="Uniform"
                               Margin="0,0,12,0"/>
                        
                        <StackPanel>
                            <TextBlock x:Name="ProductNameHeader" 
                                      Text="{Binding CurrentBrandingProductName, FallbackValue='FilKollen'}" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Foreground="White"/>
                            <TextBlock Text="Modern Säkerhetsscanner" 
                                      FontSize="11" 
                                      Foreground="White"
                                      Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Window controls -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <!-- Theme Toggle -->
                        <Button x:Name="ThemeToggleButton"
                                Style="{StaticResource MaterialDesignIconForegroundButton}"
                                Foreground="White"
                                ToolTip="Växla tema"
                                Click="ThemeToggleButton_Click"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon x:Name="ThemeIcon" Kind="WeatherSunny" Width="18" Height="18"/>
                        </Button>
                        
                        <!-- Settings -->
                        <Button x:Name="SettingsButton" 
                                Style="{StaticResource MaterialDesignIconForegroundButton}"
                                Foreground="White"
                                ToolTip="Inställningar"
                                Click="SettingsButton_Click"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="Settings" Width="18" Height="18"/>
                        </Button>
                        
                        <!-- Minimize -->
                        <Button x:Name="MinimizeButton"
                                Style="{StaticResource MaterialDesignIconForegroundButton}"
                                Foreground="White"
                                Click="MinimizeButton_Click"
                                Margin="0,0,4,0">
                            <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                        </Button>
                        
                        <!-- Close -->
                        <Button x:Name="CloseButton"
                                Style="{StaticResource MaterialDesignIconForegroundButton}"
                                Foreground="White"
                                Click="CloseButton_Click">
                            <materialDesign:PackIcon Kind="WindowClose" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Modern Sidebar -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ModernSidebar}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        
                        <!-- System Status Card -->
                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="🛡️ System Status" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,16"/>
                                
                                <StackPanel Spacing="8">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,8,0"/>
                                        <TextBlock Text="Real-time skydd aktiv" FontSize="12"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="#2196F3" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="SidebarStatusText" Text="Redo för skanning" FontSize="12"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="#FF9800" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="SidebarNextScanText" Text="Senaste: Aldrig" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Quick Actions -->
                        <TextBlock Text="Snabbåtgärder" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,12"/>
                        
                        <Button x:Name="ScanButton" 
                                Style="{StaticResource ModernPrimaryButton}"
                                Margin="0,0,0,12"
                                Click="ScanButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Starta Skanning"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="CleanBrowsersButton" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="50"
                                Margin="0,0,0,12"
                                Click="CleanBrowsersButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Web" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Rensa Webbläsare"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="QuarantineViewButton" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="50"
                                Margin="0,0,0,12"
                                Click="ManageQuarantineButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Archive" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Hantera Karantän"/>
                            </StackPanel>
                        </Button>

                        <!-- Real-time Protection Panel -->
                        <Border Style="{StaticResource ModernCard}" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="🛡️ Real-time Skydd" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,16"/>
                                
                                <!-- Protection Status -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="ProtectionStatusText" 
                                                  Text="Inaktiverat" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#F44336"/>
                                        <TextBlock x:Name="ProtectionDetailsText" 
                                                  Text="Klicka för att aktivera" 
                                                  FontSize="11" 
                                                  Opacity="0.7"/>
                                    </StackPanel>
                                    
                                    <materialDesign:PackIcon x:Name="ProtectionStatusIcon" 
                                                           Grid.Column="1"
                                                           Kind="ShieldOff" 
                                                           Width="24" Height="24"
                                                           Foreground="#F44336"/>
                                </Grid>
                                
                                <!-- Protection Toggle -->
                                <ToggleButton x:Name="ProtectionToggle"
                                             Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                             Margin="0,8"
                                             Checked="ProtectionToggle_Checked"
                                             Unchecked="ProtectionToggle_Unchecked">
                                    <TextBlock Text="Aktivera Real-time Skydd" Margin="8,0,0,0"/>
                                </ToggleButton>
                                
                                <Separator Margin="0,16"/>
                                
                                <!-- Mode Selection -->
                                <TextBlock Text="Hanteringsläge" 
                                          FontSize="14" 
                                          FontWeight="SemiBold" 
                                          Margin="0,8,0,12"/>
                                
                                <RadioButton x:Name="ManualModeRadio" 
                                           Content="Manuell hantering" 
                                           IsChecked="True"
                                           Margin="0,4"
                                           Checked="ModeRadio_Checked"/>
                                <TextBlock Text="Användaren väljer åtgärder" 
                                          FontSize="11" 
                                          Opacity="0.7" 
                                          Margin="20,0,0,8"/>
                                
                                <RadioButton x:Name="AutoModeRadio" 
                                           Content="Automatisk rensning" 
                                           Margin="0,4"
                                           Checked="ModeRadio_Checked"/>
                                <TextBlock Text="Hot hanteras automatiskt" 
                                          FontSize="11" 
                                          Opacity="0.7" 
                                          Margin="20,0,0,12"/>
                                
                                <!-- Real-time Stats -->
                                <Border Background="#667eea" 
                                        CornerRadius="8"
                                        Padding="12" 
                                        Margin="0,12,0,0"
                                        Opacity="0.9">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Eye" Width="12" Height="12" Foreground="White" Margin="0,0,6,0"/>
                                            <TextBlock x:Name="MonitoredPathsText" Text="0 övervakade sökvägar" FontSize="11" Foreground="White"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                            <materialDesign:PackIcon Kind="AlertCircle" Width="12" Height="12" Foreground="White" Margin="0,0,6,0"/>
                                            <TextBlock x:Name="ThreatsFoundText" Text="0 hot funna" FontSize="11" Foreground="White"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                            <materialDesign:PackIcon Kind="CheckCircle" Width="12" Height="12" Foreground="White" Margin="0,0,6,0"/>
                                            <TextBlock x:Name="ThreatsHandledText" Text="0 hot hanterade" FontSize="11" Foreground="White"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Modern Stats Dashboard -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Threats Found Card -->
                    <Border Grid.Column="0" Style="{StaticResource StatsCard}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667eea" Offset="0"/>
                                <GradientStop Color="#764ba2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Text="Hot Funna" 
                                      Foreground="White" 
                                      FontSize="14" 
                                      Opacity="0.9"/>
                            <TextBlock x:Name="ThreatCountText" 
                                      Text="0" 
                                      Foreground="White" 
                                      FontSize="32" 
                                      FontWeight="Bold"/>
                            <TextBlock Text="suspekta filer" 
                                      Foreground="White" 
                                      FontSize="12" 
                                      Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <!-- Protection Status Card -->
                    <Border Grid.Column="1" Style="{StaticResource StatsCard}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#11998e" Offset="0"/>
                                <GradientStop Color="#38ef7d" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Text="Skyddsstatus" 
                                      Foreground="White" 
                                      FontSize="14" 
                                      Opacity="0.9"/>
                            <TextBlock x:Name="ProtectionStatusDashboard" 
                                      Text="Inaktiv" 
                                      Foreground="White" 
                                      FontSize="20" 
                                      FontWeight="Bold"/>
                            <TextBlock Text="realtidsskydd" 
                                      Foreground="White" 
                                      FontSize="12" 
                                      Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <!-- Last Scan Card -->
                    <Border Grid.Column="2" Style="{StaticResource StatsCard}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#ffecd2" Offset="0"/>
                                <GradientStop Color="#fcb69f" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Text="Senaste Skanning" 
                                      Foreground="White" 
                                      FontSize="14" 
                                      Opacity="0.9"/>
                            <TextBlock x:Name="LastScanTimeText" 
                                      Text="Aldrig" 
                                      Foreground="White" 
                                      FontSize="18" 
                                      FontWeight="Bold"/>
                            <TextBlock Text="system kontrollerat" 
                                      Foreground="White" 
                                      FontSize="12" 
                                      Opacity="0.8"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Modern TabControl -->
                <TabControl Grid.Row="1" 
                           materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                           Style="{StaticResource MaterialDesignNavigationRailTabControl}">
                    
                    <!-- Scan Results Tab -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileSearch" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Skanningsresultat"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <Border Style="{StaticResource ModernCard}" Margin="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Progress Indicator -->
                                <ProgressBar x:Name="ScanProgressBar" 
                                           Grid.Row="0"
                                           Height="4" 
                                           IsIndeterminate="True"
                                           Visibility="Collapsed"
                                           materialDesign:TransitionAssist.DisableTransitions="True"/>

                                <!-- Results DataGrid -->
                                <DataGrid x:Name="ResultsDataGrid" 
                                        Grid.Row="1"
                                        AutoGenerateColumns="False" 
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        IsReadOnly="False"
                                        SelectionMode="Extended"
                                        materialDesign:DataGridAssist.CellPadding="12"
                                        materialDesign:DataGridAssist.ColumnHeaderPadding="12"
                                        Margin="0,12">
                                    
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="Välj" 
                                                              Binding="{Binding IsSelected}" 
                                                              Width="60"/>
                                        
                                        <DataGridTextColumn Header="Risk" 
                                                          Binding="{Binding ThreatLevel}" 
                                                          Width="80"/>
                                        
                                        <DataGridTextColumn Header="Filnamn" 
                                                          Binding="{Binding FileName}" 
                                                          Width="200"/>
                                        
                                        <DataGridTextColumn Header="Sökväg" 
                                                          Binding="{Binding FilePath}" 
                                                          Width="*"/>
                                        
                                        <DataGridTextColumn Header="Storlek" 
                                                          Binding="{Binding FormattedSize}" 
                                                          Width="100"/>
                                        
                                        <DataGridTextColumn Header="Anledning" 
                                                          Binding="{Binding Reason}" 
                                                          Width="300"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Action Buttons -->
                                <UniformGrid Grid.Row="2" Rows="1" Columns="4" Margin="0,16,0,0">
                                    <Button x:Name="QuarantineSelectedButton" 
                                          Content="Karantän Valda"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="0,0,4,0"
                                          Click="QuarantineSelectedButton_Click"/>
                                    
                                    <Button x:Name="DeleteSelectedButton" 
                                          Content="Radera Valda"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="4,0,4,0"
                                          Click="DeleteSelectedButton_Click"/>
                                    
                                    <Button x:Name="QuarantineAllButton" 
                                          Content="Karantän Alla"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="4,0,4,0"
                                          Click="QuarantineAllButton_Click"/>
                                    
                                    <Button x:Name="DeleteAllButton" 
                                          Content="Radera Alla"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="4,0,0,0"
                                          Click="DeleteAllButton_Click"/>
                                </UniformGrid>
                            </Grid>
                        </Border>
                    </TabItem>

                    <!-- Activity Log Tab -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TextBox" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Aktivitetslogg"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <Border Style="{StaticResource ModernCard}" Margin="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                    <Button Content="Rensa Loggar" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Click="ClearLogsButton_Click"/>
                                    <Button Content="Exportera Loggar" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="12,0,0,0"
                                          Click="ExportLogsButton_Click"/>
                                </StackPanel>
                                
                                <ListView x:Name="LogListView" 
                                        Grid.Row="1"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent"
                                                  Padding="16,12" 
                                                  Margin="0,2"
                                                  CornerRadius="8">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#F8F9FA"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                                <Setter Property="Background" Value="#FFF3CD"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                                <Setter Property="Background" Value="#F8D7DA"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top">
                                                        <TextBlock Text="{Binding LevelIcon}" 
                                                                 FontSize="16"
                                                                 Margin="0,0,12,0"/>
                                                        <TextBlock Text="{Binding FormattedTimestamp}" 
                                                                 FontWeight="Bold" 
                                                                 FontSize="11"
                                                                 Opacity="0.8"
                                                                 Margin="0,0,12,0"/>
                                                        <Border Background="#6C757D"
                                                              CornerRadius="12"
                                                              Padding="8,2">
                                                            <TextBlock Text="{Binding Source}" 
                                                                     FontSize="10"
                                                                     FontWeight="SemiBold"
                                                                     Foreground="White"/>
                                                        </Border>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Column="1"
                                                             Text="{Binding Message}" 
                                                             TextWrapping="Wrap" 
                                                             Margin="12,0,0,0"
                                                             VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Border>
                    </TabItem>
                </TabControl>

                <!-- Modern Status Bar -->
                <Border Grid.Row="2" 
                       Style="{StaticResource ModernCard}" 
                       Margin="8,20,8,0"
                       Padding="20,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock x:Name="StatusBarText" 
                                 Grid.Column="0"
                                 Text="Välkommen till FilKollen - Modern Säkerhetsscanner"
                                 VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal"
                                  VerticalAlignment="Center"
                                  Margin="16,0">
                            <materialDesign:PackIcon Kind="Information" 
                                                   Width="14" Height="14" 
                                                   Margin="0,0,4,0"
                                                   Opacity="0.7"/>
                            <TextBlock x:Name="VersionText" 
                                     Text="v2.0.0" 
                                     FontSize="12"
                                     Opacity="0.7"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" 
                                  Orientation="Horizontal"
                                  VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" 
                                   Fill="#4CAF50" 
                                   Margin="0,0,6,0"/>
                            <TextBlock x:Name="ConnectionStatusText" 
                                     Text="Online" 
                                     FontSize="12"
                                     Opacity="0.8"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>