                                Style="{StaticResource DangerGlassButton}"
                                Width="30"
                                Height="30"
                                Padding="0"
                                Click="CloseButton_Click"
                                ToolTip="StÃ¤ng"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1"
                    Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SIDEBAR -->
                <Border Grid.Column="0"
                        Style="{StaticResource GlassMorphCard}"
                        Margin="0,0,20,0">
                    <StackPanel>

                        <!-- Real-time Protection -->
                        <Border Style="{StaticResource GlassMorphCard}"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="ðŸ›¡ï¸ REALTIDSSKYDD"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource DynamicText}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"/>

                                <!-- HUVUDKONTROLL 1: Protection Toggle -->
                                <ToggleButton x:Name="ProtectionToggle"
                                              Style="{StaticResource ProtectionToggle}"
                                              HorizontalAlignment="Center"
                                              Checked="ProtectionToggle_Checked"
                                              Unchecked="ProtectionToggle_Unchecked"/>

                                <!-- Status Indicator -->
                                <Border Background="{StaticResource GlassMorphGradient}"
                                        CornerRadius="15"
                                        Padding="15"
                                        Margin="0,20,0,0"
                                        BorderBrush="{StaticResource TransparentDanger}"
                                        BorderThickness="1">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Ellipse Width="8"
                                                 Height="8"
