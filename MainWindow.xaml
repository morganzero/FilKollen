                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0"
                                            Grid.Column="0"
                                               Text="Hot funna:"
                                               Foreground="{DynamicResource DynamicTextSecondary}"
                                               FontSize="12"/>
                                    <TextBlock Grid.Row="0"
                                            Grid.Column="1"
                                               x:Name="StatsThreatsFound"
                                               Text="0"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#ff6b7d"/>

                                    <TextBlock Grid.Row="1"
                                            Grid.Column="0"
                                               Text="Filer skannade:"
                                               Foreground="{DynamicResource DynamicTextSecondary}"
                                               FontSize="12"
                                               Margin="0,8,0,0"/>
                                    <TextBlock Grid.Row="1"
                                            Grid.Column="1"
                                               x:Name="StatsFilesScanned"
                                               Text="0"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TransparentAccent}"
                                               Margin="0,8,0,0"/>

                                    <TextBlock Grid.Row="2"
                                            Grid.Column="0"
                                               Text="Senaste skanning:"
                                               Foreground="{DynamicResource DynamicTextSecondary}"
                                               FontSize="12"
                                               Margin="0,8,0,0"/>
                                    <TextBlock Grid.Row="2"
                                            Grid.Column="1"
                                               x:Name="StatsLastScan"
                                               Text="Aldrig"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource DynamicTextSecondary}"
                                               Margin="0,8,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- MAIN PANEL -->
                <Border Grid.Column="1"
                        Style="{StaticResource GlassMorphCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0"
                                Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="ðŸš¨ IDENTIFIERADE SÃ„KERHETSHOT"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource DynamicText}"/>

                            <StackPanel Grid.Column="1"
                                    Orientation="Horizontal">
                                <Button Content="ðŸ”„ UPPDATERA"
                                        Style="{StaticResource GlassButton}"
                                        Margin="0,0,12,0"
                                        Click="RefreshThreatsButton_Click"/>

                                <Button Content="ðŸ§¹ HANTERA ALLA"
                                        Style="{StaticResource DangerGlassButton}"
                                        Click="HandleAllThreatsButton_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Summary Stats -->
                        <Border Grid.Row="1"
                                Style="{StaticResource GlassMorphCard}"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Threats Found -->
                                <StackPanel Grid.Column="0"
                                        HorizontalAlignment="Center">
                                    <Border Width="60"
                                            Height="60"
                                            CornerRadius="30"
                                            Background="{StaticResource TransparentDanger}"
                                            HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="AlertDecagram"
                                                                 Width="30"
                                                                 Height="30"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="SUSPEKTA FILER"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource DynamicText}"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,4"/>
                                    <TextBlock x:Name="SuspiciousFilesCount"
                                               Text="0"
                                               FontSize="32"
                                               FontWeight="Black"
                                               Foreground="#ff6b7d"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="krÃ¤ver omedelbar Ã¥tgÃ¤rd"
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource DynamicTextSecondary}"
                                               TextAlignment="Center"/>
                                </StackPanel>

                                <!-- Files Scanned -->
                                <StackPanel Grid.Column="1"
                                        HorizontalAlignment="Center">
                                    <Border Width="60"
                                            Height="60"
                                            CornerRadius="30"
                                            Background="{StaticResource TransparentSuccess}"
                                            HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FileSearch"
                                                                 Width="30"
                                                                 Height="30"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="SKANNADE FILER"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource DynamicText}"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,4"/>
                                    <TextBlock x:Name="FilesScannedCount"
                                               Text="0"
                                               FontSize="32"
                                               FontWeight="Black"
                                               Foreground="#00ff88"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="analyserade den hÃ¤r sessionen"
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource DynamicTextSecondary}"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Threat List -->
                        <Border Grid.Row="2"
                                Style="{StaticResource GlassMorphCard}">
                            <Grid>
                                <!-- Threat List -->
                                <ScrollViewer x:Name="ThreatsScrollViewer"
                                              VerticalScrollBarVisibility="Auto"
                                              Visibility="Collapsed">
                                    <ItemsControl x:Name="ThreatsList"
                                                  ItemTemplate="{StaticResource SuspiciousThreatTemplate}"/>
                                </ScrollViewer>

                                <!-- No Threats Message -->
                                <StackPanel x:Name="NoThreatsPanel"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Visibility="Visible">
                                    <Border Width="100"
                                            Height="100"
                                            CornerRadius="50"
                                            Background="{StaticResource TransparentSuccess}"
                                            HorizontalAlignment="Center">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#00ff88"
                                                              BlurRadius="25"
                                                              ShadowDepth="0"
                                                              Opacity="0.8"/>
                                        </Border.Effect>
                                        <materialDesign:PackIcon Kind="CheckCircle"
                                                                 Width="50"
                                                                 Height="50"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="ðŸŽ‰ INGA AKTIVA HOT UPPTÃ„CKTA!"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Foreground="#00ff88"
                                               Margin="0,24,0,8"/>
                                    <TextBlock Text="Ditt system Ã¤r sÃ¤kert. HÃ¥ll realtidsskyddet aktiverat fÃ¶r maximal sÃ¤kerhet."
