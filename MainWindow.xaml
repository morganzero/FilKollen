                               FontSize="12"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="20,0">
                        <materialDesign:PackIcon Kind="License"
                                                 Width="14"
                                                 Height="14"
                                                 Foreground="{StaticResource TransparentAccent}"
                                                 Margin="0,0,6,0"/>
                        <TextBlock x:Name="LicenseStatusText"
                                   Text="TRIAL AKTIVT"
                                   FontSize="11"
                                   Foreground="{StaticResource TransparentAccent}"
                                   FontWeight="Medium"/>
