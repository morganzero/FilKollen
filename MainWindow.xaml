<!-- MainWindow.xaml - FÃ–RENKLAD TRANSPARENT UI MED SVENSKA -->
<Window x:Class="FilKollen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FilKollen SÃ¤kerhetsscanner"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- FÃ¶renklad threat item template -->
        <DataTemplate x:Key="SuspiciousThreatTemplate">
            <Border Style="{StaticResource GlassMorphCard}"
                    Margin="0,0,0,12"
                    MinHeight="70">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Threat Indicator -->
                    <Border Grid.Column="0"
                            Width="50"
                            Height="50"
                            CornerRadius="25"
                            Background="{StaticResource TransparentDanger}"
                            VerticalAlignment="Center"
                            Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="AlertCircle"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- File Info -->
                    <StackPanel Grid.Column="1"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding FileName}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource DynamicText}"/>
                        <TextBlock Text="{Binding FilePath}"
                                   FontSize="11"
                                   Foreground="{DynamicResource DynamicTextSecondary}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Reason}"
                                   FontSize="12"
                                   Foreground="#ff6b7d"
                                   FontWeight="Medium"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button Style="{StaticResource GlassButton}"
                                Content="ðŸ”’ KARANTÃ„N"
                                Margin="4"
                                Padding="12,6"
                                FontSize="10"/>
                        <Button Style="{StaticResource DangerGlassButton}"
                                Content="ðŸ—‘ï¸ RADERA"
                                Margin="4"
                                Padding="12,6"
                                FontSize="10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- TRANSPARENT WINDOW BORDER -->
    <Border Background="{DynamicResource DynamicBackground}"
            CornerRadius="20"
            BorderThickness="1"
            BorderBrush="{StaticResource GlassMorphBorder}">
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              Direction="270"
                              ShadowDepth="20"
                              BlurRadius="40"
                              Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- TRANSPARENT HEADER -->
            <Border Grid.Row="0"
                    Background="{StaticResource GlassMorphGradient}"
                    CornerRadius="20,20,0,0"
                    BorderBrush="{StaticResource GlassMorphBorder}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo and Title -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Border Width="40"
                                Height="40"
                                CornerRadius="20"
                                Background="{StaticResource TransparentSuccess}"
                                Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="Security"
                                                     Width="20"
                                                     Height="20"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
