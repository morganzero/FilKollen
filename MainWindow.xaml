<Window x:Class="FilKollen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FilKollen.Converters"
        Title="FilKollen - Skydd mot bluff och hackare"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Height="700"
        Width="1000"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource FK.Style.MainWindow}"
        Icon="Resources/Icons/filkollen.ico">

    <Window.Resources>
        <converters:WidthToColumnConverter x:Key="WidthToColumnConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Progress bar style för scanning -->
        <Style x:Key="ScanProgressBar"
                TargetType="ProgressBar">
            <Setter Property="Background"
                    Value="{DynamicResource FK.Brush.Surface}"/>
            <Setter Property="Foreground"
                    Value="{DynamicResource FK.Brush.Primary}"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Height"
                    Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2">
                            <Border x:Name="PART_Track"
                                    Background="Transparent">
                                <Border x:Name="PART_Indicator"
                                        Background="{TemplateBinding Foreground}"
                                        HorizontalAlignment="Left"
                                        CornerRadius="2"/>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Notification panel style -->
        <Style x:Key="NotificationPanel"
                TargetType="Border">
            <Setter Property="Background"
                    Value="{DynamicResource FK.Brush.Warning}"/>
            <Setter Property="CornerRadius"
                    Value="8"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="Margin"
                    Value="0,0,0,8"/>
            <Setter Property="Opacity"
                    Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsVisible}"
                        Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                        To="1"
                                        Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                        To="0"
                                        Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Root chrome med FilKollen tema -->
    <Border Background="{DynamicResource FK.Brush.Bg}"
            CornerRadius="12"
            BorderBrush="{DynamicResource FK.Brush.Border}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- In-app notifications -->
                <RowDefinition Height="*"/>
                <!-- Body -->
                <RowDefinition Height="50"/>
                <!-- Footer med licensstatus -->
            </Grid.RowDefinitions>

            <!-- === HEADER === -->
            <Grid Grid.Row="0"
                    Background="Transparent"
                    MouseDown="TopBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Brand area - KORRIGERAD hantering -->
                <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0">
                    <!-- Logga (visas ISTÄLLET FÖR text när den finns) -->
                    <Image x:Name="BrandLogo"
                           Width="120"
                            Height="32"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"
                           Stretch="Uniform"/>

                    <!-- Fallback till text + ikon (visas NÄR INGEN logga finns) -->
                    <StackPanel x:Name="BrandFallback"
                            Orientation="Horizontal"
                            Visibility="Visible">
                        <Border Width="32"
                                Height="32"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"
                                Background="{DynamicResource FK.Brush.Primary}"
                                CornerRadius="6">
                            <TextBlock Text="FK"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="FILKOLLEN"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Foreground="{DynamicResource FK.Brush.Primary}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Scanning progress (när aktiv) -->
                <StackPanel Grid.Column="1"
                            x:Name="ScanningIndicator"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="20,0"
                            Visibility="Collapsed">
                    <TextBlock Text="🔍 Skannar..."
                               FontSize="12"
                               Foreground="{DynamicResource FK.Brush.Subtext}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ProgressBar Style="{StaticResource ScanProgressBar}"
                                 Width="100"
                                 x:Name="ScanProgress"
                                 Value="0"/>
                </StackPanel>

                <!-- Controls -->
                <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                    <!-- Tema selector -->
                    <ComboBox x:Name="ThemeSelector"
                              Width="120"
                            Height="32"
                              Margin="0,0,12,0"
                              Style="{DynamicResource FK.Style.ThemeCombo}"
                              SelectionChanged="ThemeSelector_SelectionChanged">
                        <ComboBoxItem Content="🖥️ System"/>
                        <ComboBoxItem Content="☀️ Ljust"/>
                        <ComboBoxItem Content="🌙 Mörkt"/>
                    </ComboBox>

                    <!-- Window controls -->
                    <Button Content="−"
                            Width="32"
                            Height="32"
                            Margin="2,0"
                            Style="{DynamicResource FK.Style.WindowButton}"
                            Click="Minimize_Click"/>
                    <Button Content="□"
                            Width="32"
                            Height="32"
                            Margin="2,0"
                            Style="{DynamicResource FK.Style.WindowButton}"
                            Click="Maximize_Click"/>
                    <Button Content="✕"
                            Width="32"
                            Height="32"
                            Margin="2,0"
                            Style="{DynamicResource FK.Style.WindowButton}"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <!-- === IN-APP NOTIFICATIONS === -->
            <StackPanel Grid.Row="1"
                    x:Name="NotificationArea"
                    Margin="20,0,20,8">
                <!-- Notifikationer läggs till dynamiskt här -->
            </StackPanel>

            <!-- === MAIN CONTENT === -->
            <Grid Grid.Row="2"
                    Margin="20,0,20,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Protection toggles -->
                    <RowDefinition Height="16"/>
                    <!-- Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Status med hot-räknare -->
                    <RowDefinition Height="16"/>
                    <!-- Spacer -->
                    <RowDefinition Height="*"/>
                    <!-- Main area -->
                </Grid.RowDefinitions>

                <!-- === AUTO-SKYDD OCH IP-SKYDD === -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Auto-skydd (var: Realtidsskydd) -->
                    <Border Grid.Column="0"
                            Style="{DynamicResource FK.Style.ProtectionCard}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="AUTO-SKYDD"
                                       FontSize="14"
                                    FontWeight="SemiBold"
                                       Foreground="{DynamicResource FK.Brush.Text}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>

                            <ToggleButton x:Name="ProtectionToggle"
                                          Style="{DynamicResource FK.Style.ProtectionToggle}"
                                          Width="90"
                                    Height="45"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"
                                          Checked="ProtectionToggle_Checked"
                                          Unchecked="ProtectionToggle_Unchecked"/>

                            <TextBlock Text="Söker automatiskt efter hot"
                                       FontSize="11"
                                    Opacity="0.7"
                                       Foreground="{DynamicResource FK.Brush.Subtext}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                    MaxWidth="140"/>
                        </StackPanel>
                    </Border>

                    <!-- IP-Skydd -->
                    <Border Grid.Column="2"
                            Style="{DynamicResource FK.Style.ProtectionCard}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="IP-SKYDD"
                                       FontSize="14"
                                    FontWeight="SemiBold"
                                       Foreground="{DynamicResource FK.Brush.Text}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>

                            <ToggleButton x:Name="IpProtectionToggle"
                                          Style="{DynamicResource FK.Style.ProtectionToggle}"
                                          Width="90"
                                    Height="45"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"
                                          Checked="IpProtectionToggle_Checked"
                                          Unchecked="IpProtectionToggle_Unchecked"/>

                            <TextBlock Text="Döljer din IP-adress online"
                                       FontSize="11"
                                    Opacity="0.7"
                                       Foreground="{DynamicResource FK.Brush.Subtext}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                    MaxWidth="140"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- === STATUSMODUL MED HOT-RÄKNARE === -->
                <Border Grid.Row="2"
                        Style="{DynamicResource FK.Style.StatusCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status med hot-räknare -->
                        <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                            <Ellipse x:Name="StatusIndicator"
                                     Width="16"
                                    Height="16"
                                     Fill="{DynamicResource FK.Brush.StatusNeutral}"
                                     Margin="0,0,12,0"/>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="StatusMainText"
                                               Text="SYSTEMET ÄR SÄKERT"
                                               FontSize="16"
                                            FontWeight="Bold"
                                               Foreground="{DynamicResource FK.Brush.Text}"/>

                                    <!-- Hot-räknare -->
                                    <Border x:Name="ThreatCounter"
                                            Background="{DynamicResource FK.Brush.Danger}"
                                            CornerRadius="12"
                                            Padding="8,4"
                                            Margin="12,0,0,0"
                                            Visibility="Collapsed">
                                        <TextBlock x:Name="ThreatCountText"
                                                   Text="2 HOT"
                                                   FontSize="12"
                                                FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock x:Name="StatusSubText"
                                           Text="0 hot funna • Auto-skydd inaktivt"
                                           FontSize="12"
                                        Opacity="0.7"
                                           Foreground="{DynamicResource FK.Brush.Subtext}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Statistik -->
                        <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                            <Border Background="{DynamicResource FK.Brush.Surface}"
                                    CornerRadius="8"
                                    Padding="12,8"
                                    Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="SENASTE SKANNING"
                                               FontSize="10"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LastScanText"
                                               Text="Aldrig"
                                               FontSize="12"
                                            FontWeight="Medium"
                                               Foreground="{DynamicResource FK.Brush.Text}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{DynamicResource FK.Brush.Surface}"
                                    CornerRadius="8"
                                    Padding="12,8">
                                <StackPanel>
                                    <TextBlock Text="HOT HANTERADE"
                                               FontSize="10"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="ThreatsHandledText"
                                               Text="0"
                                               FontSize="12"
                                            FontWeight="Medium"
                                               Foreground="{DynamicResource FK.Brush.Text}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- === HUVUDOMRÅDE === -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Vänster panel - Snabbåtgärder -->
                    <Border Grid.Column="0"
                            Style="{DynamicResource FK.Style.ActionCard}">
                        <StackPanel>
                            <TextBlock Text="⚡ SNABBÅTGÄRDER"
                                       FontSize="16"
                                    FontWeight="SemiBold"
                                       Foreground="{DynamicResource FK.Brush.Text}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <Button x:Name="QuickScanButton"
                                    Content="🔍 Sök efter hot"
                                    Style="{DynamicResource FK.Style.PrimaryButton}"
                                    Margin="0,0,0,12"
                                    Click="QuickScanButton_Click"/>

                            <Button x:Name="BrowserCleanButton"
                                    Content="🌐 Rensa falska notiser"
                                    Style="{DynamicResource FK.Style.SecondaryButton}"
                                    Margin="0,0,0,12"
                                    Click="BrowserCleanButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Höger panel - Hot-lista eller säker status -->
                    <Border Grid.Column="2"
                            Style="{DynamicResource FK.Style.ContentCard}">
                        <Grid>
                            <!-- Säker status -->
                            <StackPanel x:Name="SafeStatusPanel"
                                    Visibility="Visible">
                                <Border Width="80"
                                        Height="80"
                                        CornerRadius="40"
                                        Background="{DynamicResource FK.Brush.Success}"
                                        HorizontalAlignment="Center"
                                        Margin="0,40,0,20">
                                    <TextBlock Text="✓"
                                            FontSize="40"
                                            Foreground="White"
                                               HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="ALLT SER BRA UT!"
                                           FontSize="20"
                                        FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource FK.Brush.Success}"
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="Ditt system är säkert. Aktivera auto-skydd för kontinuerlig övervakning."
                                           FontSize="14"
                                        TextAlignment="Center"
                                           Foreground="{DynamicResource FK.Brush.Subtext}"
                                           TextWrapping="Wrap"
                                        MaxWidth="400"
                                        LineHeight="20"/>
                            </StackPanel>

                            <!-- Hot-lista -->
                            <StackPanel x:Name="ThreatsPanel"
                                    Visibility="Collapsed">
                                <!-- Åtgärda alla-knapp överst -->
                                <DockPanel Margin="0,0,0,20">
                                    <Button x:Name="HandleAllThreatsButton"
                                            Content="🧹 Ta bort alla hot"
                                            Style="{DynamicResource FK.Style.PrimaryButton}"
                                            DockPanel.Dock="Left"
                                            Click="HandleAllThreatsButton_Click"/>

                                    <Button x:Name="RefreshScanButton"
                                            Content="🔄 Skanna om"
                                            Style="{DynamicResource FK.Style.SecondaryButton}"
                                            DockPanel.Dock="Right"
                                            Margin="12,0,0,0"
                                            Click="RefreshScanButton_Click"/>
                                </DockPanel>

                                <!-- Hot-tabell header -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <!-- Filnamn -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Typ -->
                                        <ColumnDefinition Width="80"/>
                                        <!-- Storlek -->
                                        <ColumnDefinition Width="100"/>
                                        <!-- Datum -->
                                        <ColumnDefinition Width="80"/>
                                        <!-- Risk -->
                                        <ColumnDefinition Width="80"/>
                                        <!-- Åtgärd -->
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                            Text="FILNAMN"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"/>
                                    <TextBlock Grid.Column="1"
                                            Text="TYP"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"/>
                                    <TextBlock Grid.Column="2"
                                            Text="STORLEK"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"/>
                                    <TextBlock Grid.Column="3"
                                            Text="SKAPAD"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"/>
                                    <TextBlock Grid.Column="4"
                                            Text="RISK"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"/>
                                    <TextBlock Grid.Column="5"
                                            Text="ÅTGÄRD"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                               Foreground="{DynamicResource FK.Brush.Subtext}"/>
                                </Grid>

                                <!-- Separator -->
                                <Border Height="1"
                                        Background="{DynamicResource FK.Brush.Border}"
                                        Opacity="0.5"
                                        Margin="0,0,0,12"/>

                                <!-- Hot-lista (scroll) -->
                                <ScrollViewer MaxHeight="300"
                                        VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ThreatsList">
                                        <!-- Dynamiska hot-rader läggs till här -->
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- === FOOTER MED LICENSSTATUS === -->
            <Border Grid.Row="3"
                    Background="{DynamicResource FK.Brush.Surface}"
                    BorderBrush="{DynamicResource FK.Brush.Border}"
                    CornerRadius="0,0,12,12"
                    BorderThickness="0,1,0,0">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Vänster: Connection status -->
                    <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                        <Ellipse Width="6"
                                Height="6"
                                Margin="0,0,6,0"
                                 Fill="{DynamicResource FK.Brush.Success}"/>
                        <TextBlock x:Name="ConnectionStatusText"
                                   Text="ONLINE"
                                   FontSize="11"
                                FontWeight="SemiBold"
                                   Foreground="{DynamicResource FK.Brush.Success}"/>
                    </StackPanel>

                    <!-- Center: Licensstatus (klickbar) -->
                    <Button Grid.Column="1"
                            x:Name="LicenseStatusButton"
                            Click="LicenseStatusButton_Click"
                            Style="{DynamicResource FK.Style.SecondaryButton}"
                            Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔑"
                                    FontSize="14"
                                    Margin="0,0,8,0"/>
                            <TextBlock x:Name="LicenseStatusText"
                                       Text="TRIAL AKTIVT"
                                       FontSize="11"
                                    FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- Höger: Version info -->
                    <TextBlock Grid.Column="2"
                               Text="FilKollen v2.1"
                               FontSize="11"
                            Opacity="0.7"
                               Foreground="{DynamicResource FK.Brush.Subtext}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>