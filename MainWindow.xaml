                                <Button x:Name="SystemInfoButton"
                                        Style="{StaticResource GlassButton}"
                                        Content="â„¹ï¸ SYSTEMINFORMATION"
                                        Click="SystemInfoButton_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Statistics -->
