<!-- MainWindow.xaml - KRITISKT FIXAD VERSION utan trasiga referenser -->
<Window x:Class="FilKollen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="FilKollen Real-time Security Suite v2.0"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <!-- KORRIGERAT: Ta bort Icon-referens till icke-existerande fil -->

    <Window.Resources>
        <!-- Endast sÃ¤kra, grundlÃ¤ggande stiler -->
        <Style x:Key="ThreatLevelCritical" TargetType="Border">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style x:Key="ThreatLevelHigh" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Threat Item Template -->
        <DataTemplate x:Key="ThreatItemTemplate">
            <Border Margin="4" Padding="12" CornerRadius="4" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon -->
                    <materialDesign:PackIcon Grid.Column="0" Kind="Alert" Width="20" Height="20" 
                                           VerticalAlignment="Center" Margin="0,0,12,0" Foreground="#FF9800"/>
                    
                    <!-- File Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="{Binding FilePath}" FontSize="11" Opacity="0.7"/>
                        <TextBlock Text="{Binding Reason}" FontSize="12" Foreground="#F44336"/>
                    </StackPanel>
                    
                    <!-- Threat Level -->
                    <Border Grid.Column="2" Background="#FF9800" CornerRadius="12" Padding="8,2" Margin="8,0">
                        <TextBlock Text="{Binding ThreatLevel}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Security" Width="28" Height="28" 
                                           Foreground="White" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="FilKollen Real-time Security" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Avancerad sÃ¤kerhetsskydd" FontSize="12" Foreground="White" Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Status -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="#4CAF50" Margin="0,0,8,0"/>
                        <TextBlock x:Name="SystemStatusText" Text="SYSTEM SKYDDAT" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="EmergencyScanButton" Content="ðŸš¨ AKUTSKANNING" 
                          Style="{StaticResource MaterialDesignRaisedButton}" Background="#F44336" 
                          Foreground="White" Margin="0,0,8,0" Click="EmergencyScanButton_Click"/>
                    <Button x:Name="SettingsButton" Style="{StaticResource MaterialDesignIconForegroundButton}" 
                          Foreground="White" Click="SettingsButton_Click">
                        <materialDesign:PackIcon Kind="Settings" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}" 
                  BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        
                        <!-- Real-time Protection -->
                        <Border Style="{StaticResource ModernGlassCard}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="ðŸ›¡ï¸ Real-time Skydd" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="ProtectionStatusText" Text="INAKTIVERAT" FontWeight="Bold" Foreground="#F44336"/>
                                        <TextBlock Text="Manuell hantering" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                    
                                    <materialDesign:PackIcon x:Name="ProtectionIcon" Grid.Column="1" Kind="ShieldOff" 
                                                           Width="20" Height="20" Foreground="#F44336"/>
                                </Grid>
                                
                                <ToggleButton x:Name="ProtectionToggle" Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                            Margin="0,12,0,0" Checked="ProtectionToggle_Checked" Unchecked="ProtectionToggle_Unchecked"/>
                            </StackPanel>
                        </Border>

                        <!-- Quick Actions -->
                        <Border Style="{StaticResource ModernGlassCard}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="âš¡ SnabbÃ¥tgÃ¤rder" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                
                                <Button x:Name="TempScanButton" Content="ðŸ” Skanna temp-filer" 
                                      Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,0,8"
                                      Click="TempScanButton_Click"/>
                                
                                <Button x:Name="BrowserCleanButton" Content="ðŸŒ Rensa webblÃ¤sare" 
                                      Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,8"
                                      Click="BrowserCleanButton_Click"/>
                                
                                <Button x:Name="SystemInfoButton" Content="â„¹ï¸ Systeminformation" 
                                      Style="{StaticResource MaterialDesignFlatButton}"
                                      Click="SystemInfoButton_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Stats -->
                        <Border Style="{StaticResource ModernGlassCard}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“Š Statistik" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Hot funna:" FontSize="11"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="StatsThreatsFound" Text="0" 
                                             FontSize="11" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Filer skannade:" FontSize="11"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="StatsFilesScanned" Text="0" 
                                             FontSize="11" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Senaste skanning:" FontSize="11"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="StatsLastScan" Text="Aldrig" 
                                             FontSize="11" FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Panel -->
            <TabControl Grid.Column="1" Style="{StaticResource MaterialDesignTabControl}">
                
                <!-- Security Dashboard -->
                <TabItem Header="ðŸ›¡ï¸ SÃ¤kerhetsdashboard">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Stats Cards -->
                        <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,16">
                            <Border Style="{StaticResource ModernGlassCard}" Margin="4">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="AlertDecagram" Width="20" Height="20" 
                                                               Foreground="#F44336" Margin="0,0,8,0"/>
                                        <TextBlock Text="Kritiska hot" FontSize="14" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <TextBlock x:Name="CriticalThreatsCount" Text="0" FontSize="28" FontWeight="Bold"
                                             Foreground="#F44336" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Style="{StaticResource ModernGlassCard}" Margin="4">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="Alert" Width="20" Height="20" 
                                                               Foreground="#FF9800" Margin="0,0,8,0"/>
                                        <TextBlock Text="HÃ¶ga hot" FontSize="14" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <TextBlock x:Name="HighThreatsCount" Text="0" FontSize="28" FontWeight="Bold"
                                             Foreground="#FF9800" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Style="{StaticResource ModernGlassCard}" Margin="4">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="FileSearch" Width="20" Height="20" 
                                                               Foreground="#4CAF50" Margin="0,0,8,0"/>
                                        <TextBlock Text="Filer skannade" FontSize="14" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <TextBlock x:Name="FilesScannedCount" Text="0" FontSize="28" FontWeight="Bold"
                                             Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                        
                        <!-- Threat List -->
                        <Border Grid.Row="1" Style="{StaticResource ModernGlassCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Header -->
                                <Grid Grid.Row="0" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="ðŸš¨ Aktiva sÃ¤kerhetshot" FontSize="18" FontWeight="SemiBold"/>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="ðŸ”„ Uppdatera" Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Margin="0,0,8,0" Click="RefreshThreatsButton_Click"/>
                                        <Button Content="ðŸ§¹ Hantera alla" Style="{StaticResource MaterialDesignRaisedButton}"
                                              Click="HandleAllThreatsButton_Click"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Threat List -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="ThreatsList" ItemTemplate="{StaticResource ThreatItemTemplate}"/>
                                </ScrollViewer>
                                
                                <!-- No Threats Message -->
                                <StackPanel x:Name="NoThreatsPanel" Grid.Row="1" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" Visibility="Visible">
                                    <materialDesign:PackIcon Kind="CheckCircle" Width="48" Height="48" 
                                                           Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="ðŸŽ‰ Inga hot upptÃ¤ckta!" FontSize="16" FontWeight="SemiBold"
                                             HorizontalAlignment="Center" Margin="0,12,0,8"/>
                                    <TextBlock Text="Ditt system Ã¤r sÃ¤kert." FontSize="14" HorizontalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Activity Log -->
                <TabItem Header="ðŸ“ Aktivitetslogg">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Log Controls -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="ðŸ§¹ Rensa loggar" Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Click="ClearLogsButton_Click" Margin="0,0,8,0"/>
                            <Button Content="ðŸ’¾ Exportera loggar" Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Click="ExportLogsButton_Click"/>
                        </StackPanel>
                        
                        <!-- Log List -->
                        <ListView x:Name="ActivityLogListView" Grid.Row="1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tid" Width="80" DisplayMemberBinding="{Binding Timestamp, StringFormat=HH:mm:ss}"/>
                                    <GridViewColumn Header="NivÃ¥" Width="80" DisplayMemberBinding="{Binding Level}"/>
                                    <GridViewColumn Header="KÃ¤lla" Width="100" DisplayMemberBinding="{Binding Source}"/>
                                    <GridViewColumn Header="Meddelande" Width="400" DisplayMemberBinding="{Binding Message}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryDark" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusBarText" Grid.Column="0"
                         Text="VÃ¤lkommen till FilKollen Real-time Security Suite"
                         Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,6,0"/>
                    <TextBlock Text="Online" FontSize="12" Foreground="White"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</Window>