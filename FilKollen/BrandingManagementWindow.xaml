                            <Button x:Name="ResetBrandingButton"
                                   Content="ðŸ”„ Ã…terstÃ¤ll Standard"
                                   Style="{StaticResource MaterialDesignOutlinedButton}"
                                   FontSize="14"
                                   Padding="16,8"
                                   Margin="8,0,0,0"
                                   Click="ResetBrandingButton_Click"/>
                        </StackPanel>
                        
                        <TextBlock Text="âš ï¸ Branding-Ã¤ndringar krÃ¤ver omstart av applikationen"
                                  FontSize="12"
                                  Opacity="0.7"
