                                  Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="PreviewBrandingButton"
                                   Content="ðŸ‘€ FÃ¶rhandsgranska"
                                   Style="{StaticResource MaterialDesignOutlinedButton}"
                                   FontSize="14"
