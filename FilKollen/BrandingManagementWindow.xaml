                                              Text="{Binding CurrentBranding.ProductName}"
                                              FontSize="14" 
                                              Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
