<!-- App.xaml -->
<Application x:Class="FilKollen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    
<Application.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <!-- Material Design -->
            <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Orange" />
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
        </ResourceDictionary.MergedDictionaries>
        
        <!-- Custom converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Custom resources -->
        <SolidColorBrush x:Key="CustomWindowBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="CustomCardBackground" Color="White"/>
        <SolidColorBrush x:Key="CustomSidebarBackground" Color="#F5F5F5"/>
    </ResourceDictionary>
</Application.Resources>
</Application>