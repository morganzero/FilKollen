<!-- MainWindow.xaml -->
<Window x:Class="FilKollen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FilKollen - Säkerhetsscanner för Windows" 
        Height="700" Width="1000" 
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="ThreatLevelStyle" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ThreatLevel}" Value="Low">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ThreatLevel}" Value="Medium">
                    <Setter Property="Background" Value="#FF9800"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ThreatLevel}" Value="High">
                    <Setter Property="Background" Value="#F44336"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ThreatLevel}" Value="Critical">
                    <Setter Property="Background" Value="#9C27B0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <DockPanel>
                <materialDesign:PackIcon Kind="Shield" 
                                       Width="32" Height="32" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,16,0"/>
                <TextBlock Text="FilKollen" 
                          VerticalAlignment="Center" 
                          FontSize="24" 
                          FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right">
                    <Button x:Name="SettingsButton" 
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="SettingsButton_Click">
                        <materialDesign:PackIcon Kind="Settings" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Mode Selection -->
        <materialDesign:Card Grid.Row="1" Margin="16,16,16,8">
            <StackPanel Orientation="Horizontal" Margin="16">
                <RadioButton x:Name="ManualModeRadio" 
                           Content="Manuellt läge" 
                           IsChecked="True"
                           Margin="0,0,32,0"
                           Checked="ModeRadio_Checked"/>
                <RadioButton x:Name="AutoModeRadio" 
                           Content="Automatiskt läge" 
                           Checked="ModeRadio_Checked"/>
                
                <!-- Schedule Settings - visas bara i auto-läge -->
                <StackPanel x:Name="SchedulePanel" 
                          Orientation="Horizontal" 
                          Margin="32,0,0,0"
                          Visibility="{Binding IsChecked, ElementName=AutoModeRadio, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <ComboBox x:Name="FrequencyCombo" 
                            Width="120" 
                            Margin="0,0,16,0"
                            materialDesign:HintAssist.Hint="Frekvens">
                        <ComboBoxItem Content="Dagligen" IsSelected="True"/>
                        <ComboBoxItem Content="Veckovis"/>
                        <ComboBoxItem Content="Månadsvis"/>
                    </ComboBox>
                    
                    <materialDesign:TimePicker x:Name="ScheduleTimePicker" 
                                             Width="120"
                                             Margin="0,0,16,0"
                                             materialDesign:HintAssist.Hint="Tid"
                                             SelectedTime="02:00:00"/>
                    
                    <Button x:Name="SaveScheduleButton" 
                          Content="Spara schema"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Click="SaveScheduleButton_Click"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="16,8,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Scan Results -->
            <materialDesign:Card Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="{StaticResource PrimaryHueMidBrush}" Padding="16">
                        <DockPanel>
                            <TextBlock Text="Skanningsresultat" 
                                     Foreground="White" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"/>
                            <TextBlock x:Name="ResultCountText" 
                                     Text="0 filer funna" 
                                     Foreground="White" 
                                     HorizontalAlignment="Right"
                                     DockPanel.Dock="Right"/>
                        </DockPanel>
                    </Border>
                    
                    <DataGrid x:Name="ResultsDataGrid" 
                            Grid.Row="1"
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            IsReadOnly="False"
                            SelectionMode="Extended"
                            materialDesign:DataGridAssist.CellPadding="8"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                        
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Välj" 
                                                  Binding="{Binding IsSelected}" 
                                                  Width="50"/>
                            
                            <DataGridTemplateColumn Header="Risk" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ThreatLevelStyle}" 
                                              CornerRadius="3" 
                                              Padding="4,2">
                                            <TextBlock Text="{Binding ThreatLevel}" 
                                                     Foreground="White" 
                                                     FontSize="10" 
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Filnamn" 
                                              Binding="{Binding FileName}" 
                                              Width="200"/>
                            
                            <DataGridTextColumn Header="Sökväg" 
                                              Binding="{Binding FilePath}" 
                                              Width="*"/>
                            
                            <DataGridTextColumn Header="Storlek" 
                                              Binding="{Binding FormattedSize}" 
                                              Width="80"/>
                            
                            <DataGridTextColumn Header="Modifierad" 
                                              Binding="{Binding LastModified, StringFormat=yyyy-MM-dd HH:mm}" 
                                              Width="120"/>
                            
                            <DataGridTextColumn Header="Anledning" 
                                              Binding="{Binding Reason}" 
                                              Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Progress Bar -->
                    <ProgressBar x:Name="ScanProgressBar" 
                               Grid.Row="1"
                               Height="4" 
                               VerticalAlignment="Top"
                               IsIndeterminate="True"
                               Visibility="Collapsed"
                               materialDesign:TransitionAssist.DisableTransitions="True"/>
                </Grid>
            </materialDesign:Card>

            <GridSplitter Grid.Column="1" 
                        HorizontalAlignment="Stretch" 
                        Background="Transparent"/>

            <!-- Action Panel -->
            <materialDesign:Card Grid.Column="2">
                <StackPanel Margin="16">
                    <TextBlock Text="Åtgärder" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,16"/>

                    <!-- Scan Button -->
                    <Button x:Name="ScanButton" 
                          Content="Starta skanning"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Margin="0,0,0,8"
                          Click="ScanButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" 
                                                       Width="16" Height="16" 
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Starta skanning"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Separator Margin="0,16"/>

                    <!-- File Actions -->
                    <TextBlock Text="Valda filer:" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>

                    <Button x:Name="QuarantineSelectedButton" 
                          Content="Karantän"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Margin="0,0,0,4"
                          Click="QuarantineSelectedButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Archive" 
                                                       Width="16" Height="16" 
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Karantän"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button x:Name="DeleteSelectedButton" 
                          Content="Radera säkert"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{StaticResource SecondaryHueMidBrush}"
                          BorderBrush="{StaticResource SecondaryHueMidBrush}"
                          Margin="0,0,0,4"
                          Click="DeleteSelectedButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DeleteForever" 
                                                       Width="16" Height="16" 
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Radera säkert"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Separator Margin="0,16"/>

                    <!-- Bulk Actions -->
                    <TextBlock Text="Alla filer:" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>

                    <Button x:Name="QuarantineAllButton" 
                          Content="Karantän alla"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Margin="0,0,0,4"
                          Click="QuarantineAllButton_Click"/>

                    <Button x:Name="DeleteAllButton" 
                          Content="Radera alla"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{StaticResource SecondaryHueMidBrush}"
                          BorderBrush="{StaticResource SecondaryHueMidBrush}"
                          Margin="0,0,0,4"
                          Click="DeleteAllButton_Click"/>

                    <Separator Margin="0,16"/>

                    <!-- Quarantine Management -->
                    <Button x:Name="ManageQuarantineButton" 
                          Content="Hantera karantän"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Click="ManageQuarantineButton_Click"/>

                    <!-- Status Info -->
                    <Border Background="{StaticResource MaterialDesignSelection}" 
                          CornerRadius="4" 
                          Padding="8" 
                          Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="Status" 
                                     FontWeight="SemiBold" 
                                     Margin="0,0,0,4"/>
                            <TextBlock x:Name="StatusText" 
                                     Text="Redo för skanning" 
                                     TextWrapping="Wrap"/>
                            <TextBlock x:Name="NextScanText" 
                                     Text="" 
                                     FontSize="12" 
                                     Opacity="0.7" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="{StaticResource MaterialDesignSelection}">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            
            <StatusBarItem Grid.Column="0">
                <TextBlock x:Name="StatusBarText" Text="Välkommen till FilKollen"/>
            </StatusBarItem>
            
            <StatusBarItem Grid.Column="1">
                <TextBlock x:Name="VersionText" Text="v1.0.0" Margin="16,0"/>
            </StatusBarItem>
            
            <StatusBarItem Grid.Column="2">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Shield" 
                                           Width="16" Height="16" 
                                           Margin="0,0,4,0"/>
                    <TextBlock x:Name="ProtectionStatusText" Text="Aktiv"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
