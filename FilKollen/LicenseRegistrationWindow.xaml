<!-- Windows/LicenseRegistrationWindow.xaml -->
<Window x:Class="FilKollen.Windows.LicenseRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FilKollen Licensregistrering" 
        Height="650" Width="800" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="LicenseCard" TargetType="materialDesign:Card">
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Padding" Value="24"/>
        </Style>
        
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" Height="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Key" 
                                           Width="32" Height="32" 
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                    <TextBlock Text="FilKollen Licensregistrering" 
                              FontSize="26" 
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="StatusHeaderText"
                          Text="Aktivera din FilKollen-licens fÃ¶r fullstÃ¤ndig sÃ¤kerhet"
                          FontSize="14"
                          Foreground="White"
                          Opacity="0.9"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Trial Status Card (visible only during trial) -->
                <materialDesign:Card x:Name="TrialStatusCard" 
                                   Style="{StaticResource LicenseCard}"
                                   Visibility="{Binding IsTrialMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Border Background="{DynamicResource SecondaryHueMidBrush}" 
                            CornerRadius="8" 
                            Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="ClockAlert" 
                                                       Width="24" Height="24" 
                                                       Foreground="White"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="TRIAL-PERIOD AKTIV" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          Foreground="White"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Ã…terstÃ¥ende tid:" 
                                              FontSize="14" 
                                              Foreground="White" 
                                              Opacity="0.9"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TrialTimeRemainingText" 
                                              Text="13 dagar, 4 timmar" 
                                              FontSize="20" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="Trial slutar:" 
                                              FontSize="14" 
                                              Foreground="White" 
                                              Opacity="0.9"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TrialExpiryDateText" 
                                              Text="2025-08-22" 
                                              FontSize="16" 
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </materialDesign:Card>

                <!-- License Registration Form -->
                <materialDesign:Card Style="{StaticResource LicenseCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderText}">
                            <Run Text="ðŸ”‘ Registrera Licens"/>
                        </TextBlock>
                        
                        <TextBlock Text="Fyll i licensnyckeln och dina uppgifter nedan fÃ¶r att aktivera FilKollen Pro-funktioner:"
                                  FontSize="14"
                                  Opacity="0.8"
                                  TextWrapping="Wrap"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- License Key Input -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                                <TextBlock Text="Licensnyckel *" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,8"/>
                                <TextBox x:Name="LicenseKeyTextBox"
                                        materialDesign:HintAssist.Hint="FILK-XXXX-XXXX-XXXX-XXXX"
                                        materialDesign:HintAssist.IsFloating="True"
                                        FontFamily="Consolas"
                                        FontSize="16"
                                        CharacterCasing="Upper"
                                        MaxLength="24"
                                        TextChanged="LicenseKeyTextBox_TextChanged"/>
                                <TextBlock x:Name="LicenseKeyValidationText"
                                          Text=""
                                          FontSize="12"
                                          Margin="0,4,0,0"
                                          Visibility="Collapsed"/>
                            </StackPanel>

                            <!-- Customer Information -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                                <TextBlock Text="Kunduppgifter" 
                                          FontWeight="SemiBold" 
                                          FontSize="16"
                                          Margin="0,0,0,12"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0"
                                            x:Name="CustomerNameTextBox"
                                            materialDesign:HintAssist.Hint="Fullt namn *"
                                            materialDesign:HintAssist.IsFloating="True"/>
                                    
                                    <TextBox Grid.Column="2"
                                            x:Name="CustomerEmailTextBox"
                                            materialDesign:HintAssist.Hint="E-postadress *"
                                            materialDesign:HintAssist.IsFloating="True"/>
                                </Grid>
                            </StackPanel>

                            <!-- License Information Display -->
                            <Border Grid.Row="2" 
                                   x:Name="LicenseInfoPanel"
                                   Background="{DynamicResource MaterialDesignDivider}"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="0,0,0,16"
                                   Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“‹ Licensinformation" 
                                              FontWeight="SemiBold" 
                                              FontSize="16"
                                              Margin="0,0,0,12"/>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Licenstyp:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LicenseTypeText" Text="-"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Giltig till:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LicenseExpiryText" Text="-"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LicenseStatusText" Text="-"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="RegisterButton"
                                       Content="ðŸ”‘ Registrera Licens"
                                       Style="{StaticResource MaterialDesignRaisedButton}"
                                       Background="{DynamicResource PrimaryHueMidBrush}"
                                       FontSize="16"
                                       Padding="24,12"
                                       Margin="0,0,16,0"
                                       IsEnabled="False"
                                       Click="RegisterButton_Click"/>
                                
                                <Button x:Name="ContinueTrialButton"
                                       Content="â±ï¸ FortsÃ¤tt Trial"
                                       Style="{StaticResource MaterialDesignOutlinedButton}"
                                       FontSize="16"
                                       Padding="24,12"
                                       Margin="0,0,16,0"
                                       Click="ContinueTrialButton_Click"
                                       Visibility="{Binding IsTrialMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                                <Button x:Name="PurchaseLicenseButton"
                                       Content="ðŸ’³ KÃ¶p Licens"
                                       Style="{StaticResource MaterialDesignOutlinedButton}"
                                       FontSize="16"
                                       Padding="24,12"
                                       Click="PurchaseLicenseButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Features Overview -->
                <materialDesign:Card Style="{StaticResource LicenseCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderText}">
                            <Run Text="ðŸš€ Pro-funktioner"/>
                        </TextBlock>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="âœ… Real-time sÃ¤kerhetsskydd" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="âœ… Automatisk hothantering" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="âœ… Avancerad webblÃ¤sarrensning" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="âœ… Schemalagd skanning" FontSize="14" Margin="0,4"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="âœ… Premium support" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="âœ… Regelbundna uppdateringar" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="âœ… Avancerade rapporter" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="âœ… White-label mÃ¶jlighet" FontSize="14" Margin="0,4"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
               Background="{DynamicResource MaterialDesignDivider}" 
               Height="60">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Security" 
                                           Width="16" Height="16" 
                                           Opacity="0.7"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="SSL-krypterad licensvalidering â€¢ SÃ¤ker datahantering" 
                              Opacity="0.7"
                              FontSize="12"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <Button Content="â“ HjÃ¤lp" 
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Click="HelpButton_Click"
                           Margin="0,0,8,0"/>
                    <Button Content="âœ‰ï¸ Kontakt" 
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Click="ContactButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>