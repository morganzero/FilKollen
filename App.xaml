<!-- App.xaml - KRITISKT FIXAD VERSION som förhindrar XamlParseException -->
<Application x:Class="FilKollen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- KORRIGERAT: Fullständiga pack URIs för MaterialDesign -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                           PrimaryColor="Blue" 
                                           SecondaryColor="Orange" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- KORRIGERAT: Ta bort referenser till icke-existerande filer -->
            <!-- Endast grundläggande resurser som garanterat fungerar -->
            
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- Säkra färgresurser -->
            <SolidColorBrush x:Key="ModernWindowBackground" Color="#F8F9FA"/>
            <SolidColorBrush x:Key="ModernWindowBackgroundDark" Color="#0F172A"/>
            <SolidColorBrush x:Key="ModernCardBackground" Color="White"/>
            <SolidColorBrush x:Key="ModernCardBackgroundDark" Color="#1E293B"/>
            <SolidColorBrush x:Key="ModernTextPrimary" Color="#212529"/>
            <SolidColorBrush x:Key="ModernTextPrimaryDark" Color="#F8FAFC"/>
            
            <!-- Säkra kort-stiler -->
            <Style x:Key="ModernGlassCard" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="10" Opacity="0.1"/>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Säkra knapp-stiler -->
            <Style x:Key="ModernAccentButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Height" Value="40"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Background" Value="#2196F3"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            
            <!-- Grundläggande animationer -->
            <Storyboard x:Key="FadeInAnimation">
                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
            </Storyboard>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>