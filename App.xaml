<Application x:Class="FilKollen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <Application.Resources>
                <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                                <!-- Colors will be set dynamically by ThemeService -->
                                <ResourceDictionary Source="Themes/Colors.Dark.xaml"/>
                                <!-- Glass styles -->
                                <ResourceDictionary Source="Themes/Glass.xaml"/>
                        </ResourceDictionary.MergedDictionaries>

                        <!-- Common converters -->
                        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

                        <!-- Window chrome style for modern look -->
                        <Style x:Key="FK.Style.MainWindow"
                                        TargetType="Window">
                                <Setter Property="AllowsTransparency"
                                                Value="True"/>
                                <Setter Property="WindowStyle"
                                                Value="None"/>
                                <Setter Property="Background"
                                                Value="Transparent"/>
                                <Setter Property="FontFamily"
                                                Value="Segoe UI"/>
                                <Setter Property="FontSize"
                                                Value="14"/>
                                <Setter Property="UseLayoutRounding"
                                                Value="True"/>
                                <Setter Property="TextOptions.TextFormattingMode"
                                                Value="Display"/>
                                <Setter Property="TextOptions.TextRenderingMode"
                                                Value="ClearType"/>
                        </Style>

                </ResourceDictionary>
        </Application.Resources>
</Application>