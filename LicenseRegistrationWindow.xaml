<Window x:Class="FilKollen.Windows.LicenseRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FilKollen.Converters"
        Title="FilKollen Licensregistrering"
        Height="650"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="{DynamicResource FK.Brush.Bg}"
        FontFamily="Inter, Segoe UI, Arial">

        <Window.Resources>
                <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

                <!-- License Card Style -->
                <Style x:Key="LicenseCard"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="{DynamicResource FK.Brush.Surface}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource FK.Brush.Border}"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="CornerRadius"
                                Value="12"/>
                        <Setter Property="Margin"
                                Value="16"/>
                        <Setter Property="Padding"
                                Value="24"/>
                        <Setter Property="Effect"
                                Value="{DynamicResource FK.Effect.CardShadow}"/>
                </Style>

                <!-- Header Text Style -->
                <Style x:Key="HeaderText"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="24"/>
                        <Setter Property="FontWeight"
                                Value="Bold"/>
                        <Setter Property="Foreground"
                                Value="{DynamicResource FK.Brush.Primary}"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Center"/>
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                </Style>

                <!-- Input TextBox Style -->
                <Style x:Key="LicenseTextBox"
                       TargetType="TextBox">
                        <Setter Property="Background"
                                Value="{DynamicResource FK.Brush.Surface}"/>
                        <Setter Property="Foreground"
                                Value="{DynamicResource FK.Brush.Text}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource FK.Brush.Border}"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="Padding"
                                Value="12,8"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused"
                                                                 Value="True">
                                                                <Setter TargetName="border"
                                                                        Property="BorderBrush"
                                                                        Value="{DynamicResource FK.Brush.Primary}"/>
                                                                <Setter TargetName="border"
                                                                        Property="BorderThickness"
                                                                        Value="2"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>
        </Window.Resources>

        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="{DynamicResource FK.Brush.Primary}"
                        Height="100">
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="🔑"
                                                   FontSize="32"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                                        <TextBlock Text="FilKollen Licensregistrering"
                                                   FontSize="26"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusHeaderText"
                                           Text="Aktivera din FilKollen-licens för fullständig säkerhet"
                                           FontSize="14"
                                           Foreground="White"
                                           Opacity="0.9"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"
                                           Visibility="Collapsed"/>
                        </StackPanel>
                </Border>

                <!-- Main Content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                                <!-- Trial Status Card -->
                                <Border x:Name="TrialStatusCard"
                                        Style="{StaticResource LicenseCard}"
                                        Background="{DynamicResource FK.Brush.Warning}"
                                        Visibility="{Binding IsTrialMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,12">
                                                        <TextBlock Text="⏰"
                                                                   FontSize="24"
                                                                   Foreground="White"
                                                                   Margin="0,0,8,0"/>
                                                        <TextBlock Text="TRIAL-PERIOD AKTIV"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"/>
                                                </StackPanel>

                                                <Grid>
                                                        <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="Återstående tid:"
                                                                           FontSize="14"
                                                                           Foreground="White"
                                                                           Opacity="0.9"
                                                                           HorizontalAlignment="Center"/>
                                                                <TextBlock x:Name="TrialTimeRemainingText"
                                                                           Text="13 dagar, 4 timmar"
                                                                           FontSize="20"
                                                                           FontWeight="Bold"
                                                                           Foreground="White"
                                                                           HorizontalAlignment="Center"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="Trial slutar:"
                                                                           FontSize="14"
                                                                           Foreground="White"
                                                                           Opacity="0.9"
                                                                           HorizontalAlignment="Center"/>
                                                                <TextBlock x:Name="TrialExpiryDateText"
                                                                           Text="2025-08-22"
                                                                           FontSize="16"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="White"
                                                                           HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                </Grid>
                                        </StackPanel>
                                </Border>

                                <!-- License Registration Form -->
                                <Border Style="{StaticResource LicenseCard}">
                                        <StackPanel>
                                                <TextBlock Style="{StaticResource HeaderText}">
                            <Run Text="🔑 Registrera Licens"/>
                                                </TextBlock>

                                                <TextBlock Text="Fyll i licensnyckeln och dina uppgifter nedan för att aktivera FilKollen Pro-funktioner:"
                                                           FontSize="14"
                                                           Opacity="0.8"
                                                           Foreground="{DynamicResource FK.Brush.Subtext}"
                                                           TextWrapping="Wrap"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,24"/>

                                                <Grid>
                                                        <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- License Key Input -->
                                                        <StackPanel Grid.Row="0"
                                                                    Margin="0,0,0,16">
                                                                <TextBlock Text="Licensnyckel *"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource FK.Brush.Text}"
                                                                           Margin="0,0,0,8"/>
                                                                <TextBox x:Name="LicenseKeyTextBox"
                                                                         Style="{StaticResource LicenseTextBox}"
                                                                         FontFamily="Consolas"
                                                                         FontSize="16"
                                                                         CharacterCasing="Upper"
                                                                         MaxLength="24"
                                                                         TextChanged="LicenseKeyTextBox_TextChanged"/>
                                                                <TextBlock x:Name="LicenseKeyValidationText"
                                                                           Text=""
                                                                           FontSize="12"
                                                                           Margin="0,4,0,0"
                                                                           Visibility="Collapsed"/>
                                                        </StackPanel>

                                                        <!-- Customer Information (email only) -->
                                                        <StackPanel Grid.Row="1"
                                                                    Margin="0,0,0,16">
                                                                <TextBlock Text="E-postadress"
                                                                           FontWeight="SemiBold"
                                                                           FontSize="16"
                                                                           Foreground="{DynamicResource FK.Brush.Text}"
                                                                           Margin="0,0,0,8"/>
                                                                <Grid>
                                                                        <TextBox x:Name="CustomerEmailTextBox"
                                                                                 Style="{StaticResource LicenseTextBox}"
                                                                                 FontSize="16"/>
                                                                        <TextBlock Text="namn@exempel.se"
                                                                                   FontSize="16"
                                                                                   Foreground="{DynamicResource FK.Brush.Subtext}"
                                                                                   Opacity="0.5"
                                                                                   Margin="12,8"
                                                                                   IsHitTestVisible="False"
                                                                                   Visibility="{Binding Text, ElementName=CustomerEmailTextBox, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                                </Grid>
                                                        </StackPanel>

                                                        <!-- Action Buttons -->
                                                        <StackPanel Grid.Row="3"
                                                                    Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <Button x:Name="RegisterButton"
                                                                        Content="🔑 Registrera Licens"
                                                                        Style="{DynamicResource FK.Style.PrimaryButton}"
                                                                        FontSize="16"
                                                                        Padding="24,12"
                                                                        Margin="0,0,16,0"
                                                                        IsEnabled="False"
                                                                        Click="RegisterButton_Click"/>
                                                                <Button x:Name="ContinueTrialButton"
                                                                        Content="⏱️ Fortsätt Trial"
                                                                        Style="{DynamicResource FK.Style.SecondaryButton}"
                                                                        FontSize="16"
                                                                        Padding="24,12"
                                                                        Margin="0,0,16,0"
                                                                        Click="ContinueTrialButton_Click"
                                                                        Visibility="{Binding IsTrialMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                                <Button x:Name="PurchaseLicenseButton"
                                                                        Content="💳 Köp Licens"
                                                                        Style="{DynamicResource FK.Style.SecondaryButton}"
                                                                        FontSize="16"
                                                                        Padding="24,12"
                                                                        Click="PurchaseLicenseButton_Click"/>
                                                        </StackPanel>
                                                </Grid>
                                        </StackPanel>
                                </Border>
                        </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Background="{DynamicResource FK.Brush.Surface}"
                        BorderBrush="{DynamicResource FK.Brush.Border}"
                        BorderThickness="0,1,0,0"
                        Height="60">
                        <Grid Margin="20,0">
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="🔒"
                                                   FontSize="16"
                                                   Opacity="0.7"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="SSL-krypterad licensvalidering • Säker datahantering"
                                                   Opacity="0.7"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource FK.Brush.Subtext}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                        <Button Content="❓ Hjälp"
                                                Style="{DynamicResource FK.Style.SecondaryButton}"
                                                Click="HelpButton_Click"
                                                Padding="12,6"
                                                FontSize="12"
                                                Margin="0,0,8,0"/>
                                        <Button Content="✉️ Kontakt"
                                                Style="{DynamicResource FK.Style.SecondaryButton}"
                                                Click="ContactButton_Click"
                                                Padding="12,6"
                                                FontSize="12"/>
                                </StackPanel>
                        </Grid>
                </Border>
        </Grid>
</Window>