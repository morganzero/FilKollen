<!-- Themes/Theme.Light.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- === BASE (ljusgrå foundation + vita ytor) === -->
  <Color x:Key="FK.Color.Bg">#F2F4F7</Color>           <!-- ljusgrå bakgrund -->
  <Color x:Key="FK.Color.Surface">#FFFFFFFF</Color>     <!-- vita paneler/rutor -->
  <Color x:Key="FK.Color.Border">#E5E8EB</Color>       <!-- subtil kant -->

  <!-- === TEXT === -->
  <Color x:Key="FK.Color.Text">#1F2937</Color>         <!-- nästan svart -->
  <Color x:Key="FK.Color.Subtext">#6B7280</Color>      <!-- grå sekundär -->

  <!-- === BRAND / ACCENT === -->
  <Color x:Key="FK.Color.Primary">#2596BE</Color>      <!-- accent -->
  <Color x:Key="FK.Color.Highlight">#95D4F2</Color>    <!-- markerat -->
  <Color x:Key="FK.Color.PrimaryBold">#4990C8</Color>  <!-- ”fet” stil -->

  <!-- === STATUS (valda för ljus bakgrund) === -->
  <Color x:Key="FK.Color.Success">#22C55E</Color>
  <Color x:Key="FK.Color.Warning">#F59E0B</Color>
  <Color x:Key="FK.Color.Danger">#EF4444</Color>
  <Color x:Key="FK.Color.Info">#2596BE</Color>

  <!-- === SHADOWS (”skuggade rutor”) === -->
  <DropShadowEffect x:Key="FK.Effect.CardShadow"
                    Color="#000000" Opacity="0.06"
                    BlurRadius="14" ShadowDepth="2" Direction="270"/>

  <!-- === BRUSHES (används i XAML) === -->
  <SolidColorBrush x:Key="FK.Brush.Bg"        Color="{StaticResource FK.Color.Bg}"/>
  <SolidColorBrush x:Key="FK.Brush.Surface"   Color="{StaticResource FK.Color.Surface}"/>
  <SolidColorBrush x:Key="FK.Brush.Card"      Color="{StaticResource FK.Color.Surface}"/>
  <SolidColorBrush x:Key="FK.Brush.CardGradient" Color="{StaticResource FK.Color.Surface}"/> <!-- alias -->
  <SolidColorBrush x:Key="FK.Brush.Border"    Color="{StaticResource FK.Color.Border}"/>
  <SolidColorBrush x:Key="FK.Brush.Text"      Color="{StaticResource FK.Color.Text}"/>
  <SolidColorBrush x:Key="FK.Brush.Subtext"   Color="{StaticResource FK.Color.Subtext}"/>

  <SolidColorBrush x:Key="FK.Brush.Primary"       Color="{StaticResource FK.Color.Primary}"/>
  <SolidColorBrush x:Key="FK.Brush.PrimaryMuted"  Color="{StaticResource FK.Color.Highlight}"/>
  <SolidColorBrush x:Key="FK.Brush.PrimaryBold"   Color="{StaticResource FK.Color.PrimaryBold}"/>

  <SolidColorBrush x:Key="FK.Brush.Success"   Color="{StaticResource FK.Color.Success}"/>
  <SolidColorBrush x:Key="FK.Brush.Warning"   Color="{StaticResource FK.Color.Warning}"/>
  <SolidColorBrush x:Key="FK.Brush.Danger"    Color="{StaticResource FK.Color.Danger}"/>
  <SolidColorBrush x:Key="FK.Brush.Info"      Color="{StaticResource FK.Color.Info}"/>

  <!-- Fokus/hover (svag accent på vit yta) -->
  <SolidColorBrush x:Key="FK.Brush.FocusRing" Color="#332596BE"/>  <!-- 20% alpha -->
  <SolidColorBrush x:Key="FK.Brush.Hover"     Color="#0D2596BE"/>  <!-- 5% alpha -->
</ResourceDictionary>
