<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- === FILKOLLEN LJUST TEMA - Premium Specification === -->

    <!-- Base färger -->
    <Color x:Key="FK.Color.Bg">#F8FAFC</Color>
    <!-- Mycket ljus grå-blå -->
    <Color x:Key="FK.Color.Surface">#FFFFFF</Color>
    <!-- Ren vit -->
    <Color x:Key="FK.Color.SurfaceGradient">#FEFEFE</Color>
    <!-- Subtle gradient för premium cards -->
    <Color x:Key="FK.Color.Border">#E2E8F0</Color>
    <!-- Ljus blå-grå kant -->

    <!-- Text -->
    <Color x:Key="FK.Color.Text">#1E293B</Color>
    <!-- Mörk blå-grå -->
    <Color x:Key="FK.Color.Subtext">#64748B</Color>
    <!-- Medium blå-grå -->

    <!-- FilKollen brand färger (från logotyp) -->
    <Color x:Key="FK.Color.Primary">#3BA8E4</Color>
    <!-- Ljusblå från logotyp -->
    <Color x:Key="FK.Color.PrimaryDark">#2596BE</Color>
    <!-- Djupare blå -->
    <Color x:Key="FK.Color.PrimaryLight">#7BC5EA</Color>
    <!-- Ljusare blå -->
    <Color x:Key="FK.Color.PrimaryMuted">#E0F2FE</Color>
    <!-- Mycket ljus blå bg -->

    <!-- Status färger - Premium semantisk konsistens -->
    <Color x:Key="FK.Color.Success">#10B981</Color>
    <!-- Grön för säkert/låg risk -->
    <Color x:Key="FK.Color.Warning">#F59E0B</Color>
    <!-- Orange för varning/medium risk -->
    <Color x:Key="FK.Color.Danger">#EF4444</Color>
    <!-- Röd för hot/hög risk -->
    <Color x:Key="FK.Color.StatusNeutral">#94A3B8</Color>
    <!-- Grå för avstängt -->

    <!-- Hover/focus -->
    <Color x:Key="FK.Color.Hover">#F1F5F9</Color>
    <Color x:Key="FK.Color.Focus">#DBEAFE</Color>

    <!-- === BRUSHES === -->
    <SolidColorBrush x:Key="FK.Brush.Bg"
                     Color="{StaticResource FK.Color.Bg}"/>
    <SolidColorBrush x:Key="FK.Brush.Surface"
                     Color="{StaticResource FK.Color.Surface}"/>
    <SolidColorBrush x:Key="FK.Brush.Border"
                     Color="{StaticResource FK.Color.Border}"/>

    <SolidColorBrush x:Key="FK.Brush.Text"
                     Color="{StaticResource FK.Color.Text}"/>
    <SolidColorBrush x:Key="FK.Brush.Subtext"
                     Color="{StaticResource FK.Color.Subtext}"/>

    <SolidColorBrush x:Key="FK.Brush.Primary"
                     Color="{StaticResource FK.Color.Primary}"/>
    <SolidColorBrush x:Key="FK.Brush.PrimaryDark"
                     Color="{StaticResource FK.Color.PrimaryDark}"/>
    <SolidColorBrush x:Key="FK.Brush.PrimaryLight"
                     Color="{StaticResource FK.Color.PrimaryLight}"/>
    <SolidColorBrush x:Key="FK.Brush.PrimaryMuted"
                     Color="{StaticResource FK.Color.PrimaryMuted}"/>

    <SolidColorBrush x:Key="FK.Brush.Success"
                     Color="{StaticResource FK.Color.Success}"/>
    <SolidColorBrush x:Key="FK.Brush.Warning"
                     Color="{StaticResource FK.Color.Warning}"/>
    <SolidColorBrush x:Key="FK.Brush.Danger"
                     Color="{StaticResource FK.Color.Danger}"/>
    <SolidColorBrush x:Key="FK.Brush.StatusNeutral"
                     Color="{StaticResource FK.Color.StatusNeutral}"/>
    <!-- === LIST/TABLE FÄRGER === -->
    <Color x:Key="FK.Color.RowBackground">#FFFFFF</Color>
    <Color x:Key="FK.Color.RowBackgroundAlt">#F8FAFC</Color>
    <Color x:Key="FK.Color.RowHover">#F1F5F9</Color>
    <Color x:Key="FK.Color.RowSelected">#DBEAFE</Color>
    <Color x:Key="FK.Color.HeaderBackground">#F8FAFC</Color>

    <!-- Row Brushes -->
    <SolidColorBrush x:Key="FK.Brush.RowBackground"
            Color="{StaticResource FK.Color.RowBackground}"/>
    <SolidColorBrush x:Key="FK.Brush.RowBackgroundAlt"
            Color="{StaticResource FK.Color.RowBackgroundAlt}"/>
    <SolidColorBrush x:Key="FK.Brush.RowHover"
            Color="{StaticResource FK.Color.RowHover}"/>
    <SolidColorBrush x:Key="FK.Brush.RowSelected"
            Color="{StaticResource FK.Color.RowSelected}"/>
    <SolidColorBrush x:Key="FK.Brush.HeaderBackground"
            Color="{StaticResource FK.Color.HeaderBackground}"/>
    <SolidColorBrush x:Key="FK.Brush.Hover"
                     Color="{StaticResource FK.Color.Hover}"/>
    <SolidColorBrush x:Key="FK.Brush.Focus"
                     Color="{StaticResource FK.Color.Focus}"/>

    <!-- Gradients för accent -->
    <LinearGradientBrush x:Key="FK.Brush.PrimaryGradient"
                         StartPoint="0,0"
                         EndPoint="1,1">
        <GradientStop Color="#4FC3F7"
                      Offset="0"/>
        <GradientStop Color="#7B61FF"
                      Offset="1"/>
    </LinearGradientBrush>

    <!-- Card shadow - Premium elevation scale -->
    <DropShadowEffect x:Key="FK.Effect.CardShadow"
                      Color="#000000"
                      Opacity="0.08"
                      BlurRadius="16"
                      ShadowDepth="4"
                      Direction="270"/>

</ResourceDictionary>