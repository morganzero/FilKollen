<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- === FILKOLLEN MÖRKT TEMA - FIXAT (Inga konstiga overlays) === -->

  <!-- Base färger - Ren marinblå utan overlays -->
  <Color x:Key="FK.Color.Bg">#0F1419</Color>
  <!-- Djupare mörk -->
  <Color x:Key="FK.Color.Surface">#1A202C</Color>
  <!-- Ren mörk yta -->
  <Color x:Key="FK.Color.SurfaceGradient">#1A202C</Color>
  <!-- SAMMA som Surface - inga gradients -->
  <Color x:Key="FK.Color.Border">#2D3748</Color>
  <!-- Tydlig kant -->

  <!-- Text - WCAG AA kontrast -->
  <Color x:Key="FK.Color.Text">#F7FAFC</Color>
  <!-- Mycket ljus för kontrast -->
  <Color x:Key="FK.Color.Subtext">#A0AEC0</Color>
  <!-- Medium ljus - 4.8:1 kontrast -->

  <!-- FilKollen brand färger (optimerat för mörk bakgrund) -->
  <Color x:Key="FK.Color.Primary">#4FD1C7</Color>
  <!-- Ljusare cyan-blå -->
  <Color x:Key="FK.Color.PrimaryDark">#2C7A7B</Color>
  <!-- Djup teal -->
  <Color x:Key="FK.Color.PrimaryLight">#9DECF9</Color>
  <!-- Mycket ljus cyan -->
  <Color x:Key="FK.Color.PrimaryMuted">#234E52</Color>
  <!-- Mörk cyan bakgrund -->

  <!-- Status färger - WCAG AA säkra -->
  <Color x:Key="FK.Color.Success">#48BB78</Color>
  <!-- Ljusare grön -->
  <Color x:Key="FK.Color.Warning">#ED8936</Color>
  <!-- Orange med bra kontrast -->
  <Color x:Key="FK.Color.Danger">#F56565</Color>
  <!-- Ljusare röd -->
  <Color x:Key="FK.Color.Medium">#F6AD55</Color>
  <!-- Orange för medium hot -->
  <Color x:Key="FK.Color.StatusNeutral">#718096</Color>
  <!-- Neutral grå -->

  <!-- Hover/focus - subtila förstärkningar -->
  <Color x:Key="FK.Color.Hover">#2A3441</Color>
  <!-- Ljusare än Surface -->
  <Color x:Key="FK.Color.Focus">#2B6CB0</Color>
  <!-- Blå fokus -->

  <!-- === BRUSHES === -->
  <SolidColorBrush x:Key="FK.Brush.Text"
      Color="{StaticResource FK.Color.Text}"/>
  <SolidColorBrush x:Key="FK.Brush.Subtext"
      Color="{StaticResource FK.Color.Subtext}"/>

  <SolidColorBrush x:Key="FK.Brush.Primary"
      Color="{StaticResource FK.Color.Primary}"/>
  <SolidColorBrush x:Key="FK.Brush.PrimaryDark"
      Color="{StaticResource FK.Color.PrimaryDark}"/>
  <SolidColorBrush x:Key="FK.Brush.PrimaryLight"
      Color="{StaticResource FK.Color.PrimaryLight}"/>
  <SolidColorBrush x:Key="FK.Brush.PrimaryMuted"
      Color="{StaticResource FK.Color.PrimaryMuted}"/>

  <SolidColorBrush x:Key="FK.Brush.Success"
      Color="{StaticResource FK.Color.Success}"/>
  <SolidColorBrush x:Key="FK.Brush.Warning"
      Color="{StaticResource FK.Color.Warning}"/>
  <SolidColorBrush x:Key="FK.Brush.Danger"
      Color="{StaticResource FK.Color.Danger}"/>
  <SolidColorBrush x:Key="FK.Brush.StatusNeutral"
      Color="{StaticResource FK.Color.StatusNeutral}"/>

  <SolidColorBrush x:Key="FK.Brush.Hover"
      Color="{StaticResource FK.Color.Hover}"/>
  <SolidColorBrush x:Key="FK.Brush.Focus"
      Color="{StaticResource FK.Color.Focus}"/>
    <!-- === LIST/TABLE FÄRGER === -->
    <Color x:Key="FK.Color.RowBackground">#1A202C</Color>
    <Color x:Key="FK.Color.RowBackgroundAlt">#1E2A3A</Color>
    <Color x:Key="FK.Color.RowHover">#2A3441</Color>
    <Color x:Key="FK.Color.RowSelected">#1E3A5F</Color>
    <Color x:Key="FK.Color.HeaderBackground">#1A202C</Color>

    <!-- Row Brushes -->
    <SolidColorBrush x:Key="FK.Brush.RowBackground"
            Color="{StaticResource FK.Color.RowBackground}"/>
    <SolidColorBrush x:Key="FK.Brush.RowBackgroundAlt"
            Color="{StaticResource FK.Color.RowBackgroundAlt}"/>
    <SolidColorBrush x:Key="FK.Brush.RowHover"
            Color="{StaticResource FK.Color.RowHover}"/>
    <SolidColorBrush x:Key="FK.Brush.RowSelected"
            Color="{StaticResource FK.Color.RowSelected}"/>
    <SolidColorBrush x:Key="FK.Brush.HeaderBackground"
            Color="{StaticResource FK.Color.HeaderBackground}"/>
    <!-- Rena gradients utan konstiga effekter -->
  <LinearGradientBrush x:Key="FK.Brush.PrimaryGradient"
      StartPoint="0,0"
      EndPoint="1,1">
    <GradientStop Color="#4FD1C7"
        Offset="0"/>
    <GradientStop Color="#38B2AC"
        Offset="1"/>
  </LinearGradientBrush>

  <!-- Diskreta shadows för mörkt tema -->
  <DropShadowEffect x:Key="FK.Effect.CardShadow"
                    Color="#000000"
                    Opacity="0.4"
                    BlurRadius="16"
                    ShadowDepth="4"
                    Direction="270"/>

  <!-- === KONTRAST-SÄKRA KOMBINATIONER === -->
  <!-- Dessa färger garanterar WCAG AA (4.5:1) mot mörk bakgrund -->

  <!-- Success combinations -->
  <SolidColorBrush x:Key="FK.Brush.SuccessText"
      Color="#68D391"/>
  <SolidColorBrush x:Key="FK.Brush.SuccessBackground"
      Color="#22543D"/>

  <!-- Warning combinations -->
  <SolidColorBrush x:Key="FK.Brush.WarningText"
      Color="#F6AD55"/>
  <SolidColorBrush x:Key="FK.Brush.WarningBackground"
      Color="#744210"/>

  <!-- Danger combinations -->
  <SolidColorBrush x:Key="FK.Brush.DangerText"
      Color="#FC8181"/>
  <SolidColorBrush x:Key="FK.Brush.DangerBackground"
      Color="#742A2A"/>

  <!-- Base brushes -->
  <SolidColorBrush x:Key="FK.Brush.Bg" Color="{StaticResource FK.Color.Bg}"/>
  <SolidColorBrush x:Key="FK.Brush.Surface" Color="{StaticResource FK.Color.Surface}"/>
  <SolidColorBrush x:Key="FK.Brush.Border" Color="{StaticResource FK.Color.Border}"/>

</ResourceDictionary>