<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="FK.Brush.Primary"
            Color="#75C9F5"/>
    <SolidColorBrush x:Key="FK.Brush.PrimaryDark"
            Color="#4FB2EA"/>
    <SolidColorBrush x:Key="FK.Brush.Bg"
            Color="#0B1520"/>
    <SolidColorBrush x:Key="FK.Brush.Surface"
            Color="#D90F1B27"/>
    <SolidColorBrush x:Key="FK.Brush.Text"
            Color="#E6F2FF"/>
    <SolidColorBrush x:Key="FK.Brush.Subtext"
            Color="#A9C1D6"/>
    <SolidColorBrush x:Key="FK.Brush.Border"
            Color="#213345"/>
    <SolidColorBrush x:Key="FK.Brush.Success"
            Color="#34D399"/>
    <SolidColorBrush x:Key="FK.Brush.Warning"
            Color="#FBBF24"/>
    <SolidColorBrush x:Key="FK.Brush.Danger"
            Color="#FF6B7D"/>

    <!-- Dark theme card gradient -->
    <LinearGradientBrush x:Key="FK.Brush.CardGradient"
            StartPoint="0,0"
            EndPoint="1,1">
        <GradientStop Color="#200F1B27"
                Offset="0"/>
        <GradientStop Color="#150F1B27"
                Offset="0.5"/>
        <GradientStop Color="#0A0F1B27"
                Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>